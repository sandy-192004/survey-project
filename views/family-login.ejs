<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="d-flex flex-column min-vh-100" style="background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);">
    <div class="container">
        <!-- Logout Message -->
        <div id="logoutMessage" class="alert alert-info text-center" style="display: none; color: blue !important;">
            Account logged out successfully.
        </div>

        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
                <!-- Login Form -->
                <div id="loginForm" class="card border-0 shadow-lg">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-3 mb-3">
                                <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Welcome Back</h2>
                            <p class="text-muted small">Sign in to your family account</p>
                        </div>
                        
                        <form id="loginSubmit" method="POST" action="/login">
                            <div class="mb-3">
                                <label for="loginEmail" class="form-label">Email Address</label>
                                <input 
                                    type="email" 
                                    class="form-control" 
                                    id="loginEmail" 
                                    name="email" 
                                    placeholder="Enter your email" 
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="loginPassword" class="form-label">Password</label>
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="loginPassword" 
                                    name="password" 
                                    placeholder="Enter your password" 
                                    required
                                >
                            </div>

                            <div class="mb-3 form-check">
                                <input 
                                    type="checkbox" 
                                    class="form-check-input" 
                                    id="rememberMe" 
                                    name="remember"
                                >
                                <label class="form-check-label" for="rememberMe">
                                    Remember me
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>
                        </form>

                        <hr>

                        <p class="text-center mb-0">
                            Don't have an account? 
                            <a href="#" onclick="toggleForms()" class="text-decoration-none">Sign Up</a>
                        </p>
                    </div>
                </div>

                <!-- Signup Form (Hidden by default) -->
                <div id="signupForm" class="card border-0 shadow-lg d-none">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-3 mb-3">
                                <i class="bi bi-person-plus text-success" style="font-size: 3rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Create Account</h2>
                            <p class="text-muted small">Join our family portal</p>
                        </div>
                        
                        <form id="signupSubmit" method="POST" action="/register">
                            <div class="mb-3">
                                <label for="signupEmail" class="form-label">Email Address</label>
                                <input 
                                    type="email" 
                                    class="form-control" 
                                    id="signupEmail" 
                                    name="email" 
                                    placeholder="Enter your email" 
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="signupPassword" class="form-label">Password</label>
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="signupPassword" 
                                    name="password" 
                                    placeholder="Enter your password" 
                                    required
                                >
                                <small class="text-muted d-block mt-1">Minimum 6 characters</small>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="confirmPassword" 
                                    name="confirmPassword" 
                                    placeholder="Confirm your password" 
                                    required
                                >
                            </div>

                            <button type="submit" class="btn btn-success w-100 mb-3">Create Account</button>
                        </form>

                        <hr>

                        <p class="text-center mb-0">
                            Already have an account? 
                            <a href="#" onclick="toggleForms()" class="text-decoration-none">Sign In</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal for Account Creation -->
    <div class="modal fade" id="accountSuccessModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-success text-white">
            <h5 class="modal-title">
              <i class="bi bi-check-circle-fill me-2"></i>Success
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center bg-light">
            <div class="mb-4">
              <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-success fw-bold mb-3">Account Created Successfully!</h4>
            <p class="text-muted">Welcome to our temple digital seva portal. You can now log in with your credentials.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Modal for Invalid Credentials -->
    <div class="modal fade" id="invalidCredentialsModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>Error
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center bg-light">
            <div class="mb-4">
              <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-danger fw-bold mb-3">Invalid Credentials</h4>
            <p class="text-muted">Invalid email or password. Please try again.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Modal for User Already Exists -->
    <div class="modal fade" id="userExistsModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-warning text-dark">
            <h5 class="modal-title">
              <i class="bi bi-exclamation-circle-fill me-2"></i>User Already Exists
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center bg-light">
            <div class="mb-4">
              <i class="bi bi-exclamation-circle-fill text-warning" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-warning fw-bold mb-3">Account Already Exists</h4>
            <p class="text-muted">An account with this email already exists. Please login or use a different email address.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Modal for Password Mismatch -->
    <div class="modal fade" id="passwordErrorModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>Error
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center bg-light">
            <div class="mb-4">
              <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-danger fw-bold mb-3">Password Mismatch</h4>
     %- include('partials/scripts') %
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleForms() {
            const loginForm = document.getElementById('loginForm');
            const signupForm = document.getElementById('signupForm');

            loginForm.classList.toggle('d-none');
            signupForm.classList.toggle('d-none');
        }

        // Check for registration success message
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('registered') === 'true') {
            const modal = new bootstrap.Modal(document.getElementById('accountSuccessModal'));
            modal.show();
            // Clean up URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Check for logout success message
        if (urlParams.get('logout') === 'success') {
            const logoutMessage = document.getElementById('logoutMessage');
            logoutMessage.style.display = 'block';
            // Clean up URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Check for invalid credentials error
        if (urlParams.get('error') === 'invalid') {
            const modal = new bootstrap.Modal(document.getElementById('invalidCredentialsModal'));
            modal.show();
            // Clean up URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Check for user already exists error
        if (urlParams.get('error') === 'exists') {
            // Show the signup form instead of login form
            document.getElementById('loginForm').classList.add('d-none');
            document.getElementById('signupForm').classList.remove('d-none');
            const modal = new bootstrap.Modal(document.getElementById('userExistsModal'));
            modal.show();
            // Clean up URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Check for password mismatch error
        if (urlParams.get('error') === 'password') {
            // Show the signup form instead of login form
            document.getElementById('loginForm').classList.add('d-none');
            document.getElementById('signupForm').classList.remove('d-none');
            const modal = new bootstrap.Modal(document.getElementById('passwordErrorModal'));
            modal.show();
            // Clean up URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Validate signup form
        document.getElementById('signupSubmit').addEventListener('submit', function(e) {
            const password = document.getElementById('signupPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return;
            }

            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long!');
                return;
            }
        });

        // Validate login form
        document.getElementById('loginSubmit').addEventListener('submit', function(e) {
            const email = document.getElementById('loginEmail').value.trim();
            const password = document.getElementById('loginPassword').value;

            if (!email || !password) {
                e.preventDefault();
                alert('Please fill in all fields!');
                return;
            }
        });
    </script>
</body>
</html>