<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Family</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      margin: 0;
      background-color: #f8f9fa;
    }

    .family-header {
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      background: linear-gradient(135deg, #495057, #6c757d);
      color: white;
      padding: 1.5rem 1rem;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
      box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    }

    .section-title {
      margin: 1.5625rem 0 0.625rem;
      font-weight: bold;
      color: #343a40;
    }

    .parents-row,
    .children-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }

    .member-card {
      min-width: 18.75rem;
      max-width: 31.25rem;
      background-color: #ffffff;
      border-radius: 0.875rem;
      padding: 1.25rem;
      position: relative;
      box-shadow: 0 0.375rem 1.125rem rgba(0,0,0,0.1);
      display: flex;
      justify-content: space-evenly;
      align-items: flex-start;
      border: 1px solid #dee2e6;
    }

    .member-info {
      flex: 1;
      padding-right: 1.1875rem;
    }

    .member-name {
      font-size: 2rem;
      font-weight: bold;
      color: #343a40;
      margin-bottom: 0.1875rem;
    }

    .info-item {
      font-size: 1rem;
      color: #495057;
      margin-bottom: 0.25rem;
    }

    .member-photo {
      width: 9.375rem;
      height: 9.375rem;
      object-fit: cover;
      border-radius: 0.75rem;
      border: 0.125rem solid #ced4da;
    }

    .btn {
      min-height: 2.75rem;
    }

    .btn-primary {
      background-color: #495057;
      border-color: #495057;
    }

    .btn-primary:hover {
      background-color: #343a40;
      border-color: #343a40;
    }

    @media (max-width: 768px) {
      .parents-row,
      .children-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .member-card {
        min-width: 100%;
        padding: 1rem;
        flex-direction: column;
        align-items: center;
      }

      .member-info {
        padding-right: 0;
        text-align: center;
      }

      .member-photo {
        width: 8rem;
        height: 8rem;
        margin-top: 1rem;
      }
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="family-header">
    Family Details
  </div>

  <div class="container mt-4">

    <% 
    let members = [];
    if (member) {
      if (member.husband_name) {
        members.push({
          member_type: 'parent',
          name: member.husband_name,
          relationship: 'husband',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.husband_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.husband_photo
        });
      }
      if (member.wife_name) {
        members.push({
          member_type: 'parent',
          name: member.wife_name,
          relationship: 'wife',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.wife_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.wife_photo
        });
      }
    }

    if (children) {
      children.forEach(child => {
        const addressParts = [
          child.door_no,
          child.street,
          child.district,
          child.state,
          child.pincode
        ].filter(Boolean);
        members.push({
          member_type: 'child',
          name: child.name,
          relationship: child.relationship,
          mobile: child.mobile,
          occupation: child.occupation,
          gender: child.gender,
          dob: child.dob,
          address: addressParts.join(', '),
          photo: child.photo
        });
      });
    }
    %>

    <% if (!members.length) { %>
      <div class="text-center mt-4 text-muted">
        <h4>No family data found</h4>
      </div>
    <% } %>

    <!-- PARENTS -->
    <h4 class="section-title">Parents</h4>
    <div class="parents-row">
      <% members.forEach(member => { %>
        <% if (member.member_type === 'parent') { %>
          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship %></div>
              <div class="info-item"><b>Mobile:</b> <%= member.mobile || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Address:</b>
                <%= [member.door_no, member.street, member.district, member.state, member.pincode].filter(Boolean).join(', ') || '-' %>
              </div>
            </div>

            <% if (member.photo) { %>
              <% let photoSrc = member.photo; %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>
        <% } %>
      <% }) %>
    </div>

    <% if (children && children.length > 0) { %>
    <!-- CHILDREN -->
    <h4 class="section-title">Children</h4>
    <div class="children-row">
      <% members.forEach(member => { %>
        <% if (member.member_type === 'child') { %>
          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship || '-' %></div>
              <div class="info-item"><b>DOB:</b>
                <%= member.dob ? new Date(member.dob).toISOString().split('T')[0] : '-' %>
              </div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= member.address || 'No address available' %></div>
            </div>

            <% if (member.photo) { %>
              <% let photoSrc = member.photo; %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>
        <% } %>
      <% }) %>
    </div>
    <% } %>

    <!-- BACK BUTTON -->
    <div class="text-center mt-5 mb-4">
      <a href="/admin/dashboard" class="btn btn-primary px-4" style="background-color: #8B4513; border:2px solid #5a3e2b;">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
      </a>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
