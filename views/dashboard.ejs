<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Family Portal - Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

  <style>
    html, body { height: 100%; margin: 0; }
    body { background-color: #f8f9fa; height: 100vh; overflow: hidden; opacity: 0; transition: opacity 0.8s ease-in-out; }
    .navbar { background-color: rgba(52, 58, 64, 0.95) !important; backdrop-filter: blur(10px); color: white; }

    .dashboard-image-container {
      width: 100%;
      height: 100vh;
      background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
      background-size: cover;
      background-position: center top;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .quote-container {
      position: relative;
      max-width: 720px;
      width: 85%;
      padding: 1.6rem 3cqb;
      background: rgba(255,255,255,0.95);
      backdrop-filter: blur(5px);
      border-radius: 15px;
      color: #000;
      text-align: center;
      font-family: "Times New Roman", Times, serif;
      z-index: 5;
      border: 1px solid #dee2e6;
      box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }

    .quote-text { font-size: 1.8rem; font-style: italic; font-weight: bold; margin-bottom: 1rem; color: #343a40; }
    .welcome-text { position: absolute; top: 10%; left: 50%; transform: translateX(-50%); font-size: 3rem; font-weight: bold; color: #495057; z-index: 10; text-shadow: 2px 2px 4px rgba(0,0,0,0.1); }

    @media (max-width: 768px) {
      body { font-size: 14px; }
      .quote-container { padding: 0.5rem 1rem; }
      .quote-text { font-size: 0.9rem; }
      .welcome-text { font-size: 1.2rem; }
    }

    #comingSoonModal .modal-dialog {
      max-width: 400px;
      min-height: 300px;
    }
    #comingSoonModal .modal-body {
      background-color: #f8f9fa;
    }
    #comingSoonModal .modal-body p {
      color: #6c757d;
      font-weight: bold;
    }

    /* Toast */
    #successToast { display: none; 
  }
  </style>
</head>
<body>

<!-- Success Toast -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;">
  <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">âœ“ Family saved successfully!</div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>

<!-- Login Success Modal -->
<div class="modal fade" id="loginSuccessModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title">
          <i class="bi bi-check-circle-fill me-2"></i>Success
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center bg-light">
        <div class="mb-4">
          <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-success fw-bold mb-3">Login Successful!</h4>
        <p class="text-muted">Welcome back to our temple digital seva portal. May your visit be blessed.</p>
      </div>
    </div>
  </div>
</div>

<!-- NAVBAR -->
<nav class="navbar navbar-dark shadow-sm">
  <div class="container-fluid">
    <button class="btn btn-outline-secondary d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="d-none d-lg-block ms-auto">
      <ul class="navbar-nav flex-row">
        <li class="nav-item mx-2">
          <a class="nav-link fw-500" href="#" onclick="handleFamilyClick(); return false;">
            <i class="bi bi-people-fill"></i> Family
          </a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link fw-500" href="#" onclick="showComingSoonModal(); return false;">
            <i class="bi bi-calendar-heart"></i> Pooja Booking
          </a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link fw-500" href="#" onclick="showComingSoonModal(); return false;">
            <i class="bi bi-person-circle"></i> Profile
          </a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link fw-500" href="/logout">
            <i class="bi bi-box-arrow-right"></i> Logout
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Mobile Sidebar -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="navbar-nav">
      <li class="nav-item mb-2">
        <a class="nav-link" href="#" onclick="handleFamilyClick(); return false;">
          <i class="bi bi-people-fill"></i> Family
        </a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link" href="#" onclick="showComingSoonModal(); return false;">
          <i class="bi bi-calendar-heart"></i> Pooja Booking
        </a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link" href="#" onclick="showComingSoonModal(); return false;">
          <i class="bi bi-person-circle"></i> Profile
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">
          <i class="bi bi-box-arrow-right"></i> Logout
        </a>
      </li>
    </ul>
  </div>
</div>


<!-- ========== NEW DASHBOARD UI (REPLACED OLD CONTAINER) ========== -->


<div class="dashboard-image-container">
  <p class="welcome-text">Welcome to Temple Portal</p>
  <div class="quote-container">
    <div class="quote-text">

      <p class="cycling-quote">May god bless you with wisdom, peace, and divine strength. May your family always be protected and guided on the righteous path.</p>

    </div>
  </div>
</div>



<!-- =================== MODALS (UNCHANGED) =================== -->

<!-- Family Modal -->

<div class="modal fade" id="familyCheckModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Family Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="familyContent"></div>

      <div class="modal-body">
        <div id="familyContent">
          <div class="text-center">
            <div class="spinner-border"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="familyStatusModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="familyModalTitle"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="familyModalMsg"></div>
      <div class="modal-footer">
        <button class="btn btn-primary" id="familyModalAction"></button>
      </div>

      <div class="modal-body" id="familyContent"></div>

    </div>
  </div>
</div>

<!-- Coming Soon Modal -->
<div class="modal fade" id="comingSoonModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-warning text-dark">
        <h5 class="modal-title"><i class="bi bi-clock"></i> Coming Soon</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <p class="mb-0">Features coming soon!</p>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Show success toast
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('success') === 'true') {
    const toastElement = document.getElementById('successToast');
    toastElement.style.display = 'flex';
    new bootstrap.Toast(toastElement).show();
    window.history.replaceState({}, document.title, window.location.pathname);
  }

  // Show login modal
  if (urlParams.get('login') === 'success') {
    new bootstrap.Modal(document.getElementById('loginSuccessModal')).show();
    window.history.replaceState({}, document.title, window.location.pathname);
  }

  function showComingSoonModal() {
    new bootstrap.Modal(document.getElementById('comingSoonModal')).show();
  }

  function handleFamilyClick() {
    if (sessionStorage.getItem('backFromMyFamily') === 'true') {
      sessionStorage.removeItem('backFromMyFamily');
      window.location.href = '/my-family';
      return;
    }

    // Fetch family data first
    fetch('/my-family-json')
      .then(res => res.json())
      .then(data => {
        if (data.success && data.members && data.members.length > 0) {
          sessionStorage.setItem('backFromMyFamily', 'true');
          window.location.href = '/my-family';
        } else {
          const familyContent = document.getElementById('familyContent');
          familyContent.innerHTML = `
            <div class="text-center">
              <div class="alert alert-warning">
                <h5>Add Details</h5>
                <p>No family details found. Please add your family details.</p>
                <button class="btn btn-primary" onclick="window.location.href='/family-form'">Add Details</button>
              </div>
            </div>
          `;
          new bootstrap.Modal(document.getElementById('familyCheckModal')).show();
        }
      })
      .catch(err => {
        console.error(err);
        const familyContent = document.getElementById('familyContent');
        familyContent.innerHTML = `
          <div class="text-center">
            <div class="alert alert-danger">
              <h5>Error Loading Family Details</h5>
              <p>Please try again.</p>
            </div>
          </div>
        `;
        new bootstrap.Modal(document.getElementById('familyCheckModal')).show();
      });
  }

  // Fade in page
  window.addEventListener('load', () => {
    document.body.style.opacity = '1';
  });
</script>

</body>
</html>