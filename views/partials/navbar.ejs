<!-- Family Logout Confirmation Modal -->
<div class="modal fade" id="familyLogoutModal" tabindex="-1" aria-labelledby="familyLogoutModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="familyLogoutModalLabel">
          <i class="bi bi-exclamation-circle text-warning me-2"></i>Confirm Logout
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="mb-0">Are you sure you want to logout from the Family Portal?</p>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="bi bi-x-circle me-2"></i>Cancel
        </button>
        <button type="button" class="btn btn-danger" id="confirmFamilyLogoutBtn">
          <i class="bi bi-box-arrow-right me-2"></i>Yes, Logout
        </button>
      </div>
