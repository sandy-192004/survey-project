<script>
  function closeMobileNav() {
    const mobileNav = document.getElementById('familyMobileNav');
    if (!mobileNav) return;
    const offcanvas = bootstrap.Offcanvas.getInstance(mobileNav);
    if (offcanvas) offcanvas.hide();
  }

  function handleLogout(event) {
    event.preventDefault();
    closeMobileNav();
    const logoutModal = new bootstrap.Modal(document.getElementById('familyLogoutModal'));
    logoutModal.show();
  }

  function showComingSoonModal(featureName) {
    closeMobileNav();
    document.getElementById('comingSoonFeatureName').textContent = featureName;
    const modal = new bootstrap.Modal(document.getElementById('navbarComingSoonModal'));
    modal.show();
  }

  document.addEventListener('DOMContentLoaded', function() {
    const confirmBtn = document.getElementById('confirmFamilyLogoutBtn');
    if (confirmBtn) {
      confirmBtn.addEventListener('click', function() {
        window.location.href = '/logout';
      });
    }
  });
</script>
