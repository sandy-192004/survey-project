<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="d-flex flex-column min-vh-100">

<%- include('partials/navbar') %>

<div class="container-fluid px-3 px-md-4 py-4" style="flex: 1; background-color: var(--gray-50);">
  
  <!-- Page Header -->
  <div class="mb-4">
    <h1 class="h3 fw-bold mb-0"><i class="bi bi-plus-circle-fill text-primary me-2"></i>Add Family</h1>
  </div>

  <style>
    .card {
      border: 1px solid var(--border-color);
      border-radius: 10px;
      background-color: #ffffff;
      box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    }

    .btn-primary {
      background-color: var(--primary);
      border-color: var(--primary);
    }

    .btn-primary:hover {
      background-color: var(--primary-dark);
      border-color: var(--primary-dark);
    }

    .img-thumbnail {
      max-height: 150px;
      object-fit: cover;
      display: none;
      margin-top: 8px;
    }
  </style>

  <form id="familyForm" enctype="multipart/form-data">

    <div class="row g-2">
      <div class="col-12">
        <div class="card p-4">

          <!-- ===== PARENT DETAILS ===== -->
          <div id="parentSection">
      <div class="row g-2">
        <div class="col-12 col-md-6">
          <h5 class="mb-3 small">Husband Details</h5>

          <input class="form-control mb-2 small" name="husband_name" placeholder="Husband Name" required>

          <select class="form-control mb-2 small" name="parent[husband_gender]">
            <option value="male" selected>Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>

          <input class="form-control mb-2 small" name="parent[mobile]" placeholder="Husband Mobile" type="tel">
          <input class="form-control mb-2 small" name="parent[occupation]" placeholder="Husband Occupation">

          <input type="file" id="husband_file" class="form-control small d-none"
                 name="parent[husband_photo]" accept="image/*"
                 onchange="handlePhotoSelect(this, 'husband')">

          <div id="husband_placeholder" class="d-flex align-items-center justify-content-center position-relative" style="height: 100px; background-color: #f8f9fa; border: 1px dashed #dee2e6; cursor: pointer;" onclick="showPhotoOptions('husband')">
            <span class="text-muted">Click to upload or capture photo</span>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <h5 class="mb-3 small">Wife Details</h5>

          <input class="form-control mb-2 small" name="parent[wife_name]" placeholder="Wife Name">

          <select class="form-control mb-2 small" name="parent[wife_gender]">
            <option value="female" selected>Female</option>
            <option value="male">Male</option>
            <option value="other">Other</option>
          </select>

          <input class="form-control mb-2 small" name="parent[mobile_wife]" placeholder="Wife Mobile" type="tel">
          <input class="form-control mb-2 small" name="parent[occupation_wife]" placeholder="Wife Occupation">

          <input type="file" id="wife_file" class="form-control small d-none"
                 name="parent[wife_photo]" accept="image/*"
                 onchange="handlePhotoSelect(this, 'wife')">

          <div id="wife_placeholder" class="d-flex align-items-center justify-content-center position-relative" style="height: 100px; background-color: #f8f9fa; border: 1px dashed #dee2e6; cursor: pointer;" onclick="showPhotoOptions('wife')">
            <span class="text-muted">Click to upload or capture photo</span>
          </div>
        </div>
      </div>

      <!-- ===== ADDRESS ===== -->
      <h5 class="mt-4 mb-3 small">Address</h5>
      <div class="row g-2">
        <div class="col-12 col-md-6">
          <input class="form-control mb-2 small" name="parent[door_no]" placeholder="Door No">
          <input class="form-control mb-2 small" name="parent[street]" placeholder="Street">
        </div>

        <div class="col-12 col-md-6">
          <select class="form-control mb-2 small" name="parent[state]" id="state">
            <option value="">Select State</option>
          </select>

          <select class="form-control mb-2 small" name="parent[district]" id="district">
            <option value="">Select District</option>
          </select>
        </div>
      </div>

      <input class="form-control mb-3 small" name="parent[pincode]" placeholder="Pincode" type="text">
      </div>

      <!-- ===== CHILDREN SECTION ===== -->
      <h5 class="mt-4 mb-3 small">Children</h5>
      <div id="children" class="mb-3"></div>

      <button type="button" class="btn btn-secondary btn-sm mb-3" onclick="addChild()">
        + Add Child
      </button>

      <!-- ===== SAVE BUTTON ===== -->
      <div class="mt-4 text-center">
        <button type="submit" class="btn btn-primary px-5">
          <i class="bi bi-check-lg me-2"></i>Save Family
        </button>
      </div>

    </div>
  </div>
</div>

</form>

</div>

<%- include('partials/footer') %>

<!-- SweetAlert2 - Required by family.js -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<%- include('partials/scripts') %>
<script src="/js/family.js"></script>

<script>
// Check if in add child mode
const urlParams = new URLSearchParams(window.location.search);
const mode = urlParams.get('mode');

if (mode === 'addChild') {
  // Hide parent section
  const parentSection = document.getElementById('parentSection');
  if (parentSection) {
    parentSection.style.display = 'none';
  }
  
  // Change page title
  const pageTitle = document.querySelector('h1');
  if (pageTitle) {
    pageTitle.innerHTML = '<i class="bi bi-person-plus-fill text-success me-2"></i>Add Child';
  }
  
  // Change submit button text
  const submitBtn = document.querySelector('button[type="submit"]');
  if (submitBtn) {
    submitBtn.innerHTML = '<i class="bi bi-check-lg me-2"></i>Save Child';
  }
  
  // Auto-add one child form
  if (typeof addChild === 'function') {
    setTimeout(() => addChild(), 100);
  }
}
</script>

</body>
</html>