<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Family</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f5e6d3;
    }

    .family-header {
      background: linear-gradient(135deg, #8B4513, #A0522D);
      color: white;
      padding: 1.5rem;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
    }

    .section-title {
      margin: 30px 0 15px;
      font-weight: bold;
      color: #5a3e2b;
    }

    .cards-row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .member-card {
      background: #f9f1e6;
      border-radius: 16px;
      padding: 20px;
      width: 100%;
      max-width: 520px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    }

    .member-photo {
      width: 160px;
      height: 160px;
      object-fit: cover;
      border-radius: 12px;
      border: 2px solid #d1b89a;
    }
  </style>
</head>

<body>

<div class="family-header">Edit Family</div>

<div class="container mt-4">

  <!-- ================= PARENTS ================= -->
  <h4 class="section-title">Parents</h4>

  <div class="cards-row">

    <% members.forEach(member => { if (member.member_type === 'parent') { %>

    <form class="member-card" method="POST" action="/update-member/<%= member.id %>" enctype="multipart/form-data">

      <div class="row">
        <div class="col-md-8">

          <label class="form-label">Name</label>
          <input class="form-control mb-2" name="name" value="<%= member.name %>" required>

          <label class="form-label">Mobile</label>
          <input class="form-control mb-2" name="mobile" value="<%= member.mobile %>">

          <label class="form-label">Occupation</label>
          <input class="form-control mb-2" name="occupation" value="<%= member.occupation %>">

          <label class="form-label">Gender</label>
          <select class="form-control mb-2" name="gender">
            <option value="Male" <%= member.gender === 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= member.gender === 'Female' ? 'selected' : '' %>>Female</option>
          </select>

          <label class="form-label">Address</label>
          <input class="form-control mb-2" name="door_no" value="<%= member.door_no %>" placeholder="Door No">
          <input class="form-control mb-2" name="street" value="<%= member.street %>" placeholder="Street">
          <input class="form-control mb-2" name="district" value="<%= member.district %>" placeholder="District">
          <input class="form-control mb-2" name="state" value="<%= member.state %>" placeholder="State">
          <input class="form-control mb-2" name="pincode" value="<%= member.pincode %>" placeholder="Pincode">

        </div>

        <div class="col-md-4 text-center">
          <% if (member.photo) { %>
            <img src="/uploads/<%= member.photo %>" class="member-photo mb-2">
          <% } else { %>
            <img src="https://via.placeholder.com/160" class="member-photo mb-2">
          <% } %>

          <input type="file" class="form-control mt-2" name="photo">
        </div>
      </div>

      <button class="btn btn-success w-100 mt-3">Update</button>

    </form>

    <% } }) %>

  </div>

  <!-- ================= CHILDREN ================= -->
  <h4 class="section-title">Children</h4>

  <div class="cards-row">

    <% members.forEach(member => { if (member.member_type === 'child') { %>

    <form class="member-card" method="POST" action="/update-member/<%= member.id %>" enctype="multipart/form-data">

      <label class="form-label">Name</label>
      <input class="form-control mb-2" name="name" value="<%= member.name %>" required>

      <label class="form-label">DOB</label>
      <input type="date" class="form-control mb-2" name="dob"
        value="<%= member.dob ? new Date(member.dob).toISOString().split('T')[0] : '' %>">

      <label class="form-label">Gender</label>
      <select class="form-control mb-2" name="gender">
        <option value="Male" <%= member.gender === 'Male' ? 'selected' : '' %>>Male</option>
        <option value="Female" <%= member.gender === 'Female' ? 'selected' : '' %>>Female</option>
      </select>

      <label class="form-label">Occupation</label>
      <input class="form-control mb-2" name="occupation" value="<%= member.occupation %>">

      <label class="form-label">Relationship</label>
      <select class="form-control mb-2" name="relationship">
        <option value="son" <%= member.relationship === 'son' ? 'selected' : '' %>>Son</option>
        <option value="daughter" <%= member.relationship === 'daughter' ? 'selected' : '' %>>Daughter</option>
      </select>

      <% if (member.photo) { %>
        <img src="/uploads/<%= member.photo %>" class="member-photo mb-2">
      <% } %>

      <input type="file" class="form-control mb-2" name="photo">

      <button class="btn btn-success w-100">Update</button>

    </form>

    <% } }) %>

  </div>

</div>

</body>
</html>
