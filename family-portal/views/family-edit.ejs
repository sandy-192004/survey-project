<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Family</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Brown Theme -->
  <style>
    :root {
      --brown-main: #6f4e37;
      --brown-light: #f5efe9;
      --brown-border: #d6c2b3;
    }

    body {
      background-color: var(--brown-light);
    }

    h3, h5 {
      color: var(--brown-main);
      font-weight: 600;
    }

    .card {
      border: 1px solid var(--brown-border);
      border-radius: 10px;
      margin-bottom: 15px;
    }

    .btn-primary {
      background-color: var(--brown-main);
      border-color: var(--brown-main);
    }

    .btn-primary:hover {
      background-color: #5a3f2c;
      border-color: #5a3f2c;
    }

    .form-control:focus {
      border-color: var(--brown-main);
      box-shadow: 0 0 0 0.2rem rgba(111, 78, 55, 0.25);
    }

    .img-thumbnail {
      max-height: 150px;
      object-fit: cover;
      display: none;
      margin-top: 8px;
    }
  </style>
</head>
<body class="container-fluid mt-4">

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
  <h3 class="mb-3 mb-md-0">Edit Family</h3>
  <a href="/my-family" class="btn btn-secondary">Back to My Family</a>
</div>

<form id="editFamilyForm" enctype="multipart/form-data">
  <div class="row g-2">
    <div class="col-12">
      <div class="card p-3">
        <div class="row g-2">
          <div class="col-12 col-md-6">
            <h5 class="mb-3 small">Parent Details</h5>
            <input class="form-control mb-2 small" name="husband_name" placeholder="Husband Name" required>
            <input class="form-control mb-2 small" name="wife_name" placeholder="Wife Name">
            <input class="form-control mb-2 small" name="wife_mobile" placeholder="Wife Mobile" type="tel">
            <input class="form-control mb-2 small" name="wife_occupation" placeholder="Wife Occupation">
            <input class="form-control mb-2 small" name="husband_mobile" placeholder="Husband Mobile" type="tel">
            <input class="form-control mb-2 small" name="husband_occupation" placeholder="Husband Occupation">
          </div>

          <div class="col-12 col-md-6">
            <h5 class="mb-3 small">Photos</h5>
            <div class="mb-3">
              <label class="form-label small">Husband Photo</label>
              <input type="file" class="form-control small" name="husband_photo" accept="image/*" onchange="handlePhotoSelect(this, 'husband_preview')">
              <img id="husband_preview" class="img-thumbnail">
            </div>
            <div class="mb-3">
              <label class="form-label small">Wife Photo</label>
              <input type="file" class="form-control small" name="wife_photo" accept="image/*" onchange="handlePhotoSelect(this, 'wife_preview')">
              <img id="wife_preview" class="img-thumbnail">
            </div>
          </div>
        </div>

        <h5 class="mt-4 mb-3 small">Address</h5>
        <div class="row g-2">
          <div class="col-12 col-md-6">
            <input class="form-control mb-2 small" name="door_no" placeholder="Door No">
            <input class="form-control mb-2 small" name="street" placeholder="Street">
          </div>
          <div class="col-12 col-md-6">
            <select class="form-control mb-2 small" name="state" id="state">
              <option value="">Select State</option>
            </select>
            <select class="form-control mb-2 small" name="district" id="district">
              <option value="">Select District</option>
            </select>
          </div>
        </div>

        <input class="form-control mb-3 small" name="pincode" placeholder="Pincode" type="text">

        <div class="mt-4">
          <button type="submit" class="btn btn-primary w-100 w-lg-auto" style="min-height: 44px; font-size: 16px;">Update Family</button>
        </div>
      </div>
    </div>
  </div>
</form>

<script src="/js/family.js"></script>

<script>
  function handlePhotoSelect(input, previewId) {
    if(input.files && input.files[0]){
      const reader = new FileReader();
      reader.onload = function(e){
        const img = document.getElementById(previewId);
        img.src = e.target.result;
        img.style.display = 'block';
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  // Load existing family data
  document.addEventListener("DOMContentLoaded", async () => {
    try {
      const res = await fetch("/my-family-json");
      const data = await res.json();

      if (data.success && data.members) {
        // Find parents
        const husband = data.members.find(m => m.relationship === 'husband');
        const wife = data.members.find(m => m.relationship === 'wife');

        if (husband) {
          document.querySelector('input[name="husband_name"]').value = husband.name || '';
          document.querySelector('input[name="husband_mobile"]').value = husband.mobile || '';
          document.querySelector('input[name="husband_occupation"]').value = husband.occupation || '';

          if (husband.photo) {
            document.getElementById('husband_preview').src = '/uploads/' + husband.photo;
            document.getElementById('husband_preview').style.display = 'block';
          }
        }

        if (wife) {
          document.querySelector('input[name="wife_name"]').value = wife.name || '';
          document.querySelector('input[name="wife_mobile"]').value = wife.mobile || '';
          document.querySelector('input[name="wife_occupation"]').value = wife.occupation || '';

          if (wife.photo) {
            document.getElementById('wife_preview').src = '/' + wife.photo;
            document.getElementById('wife_preview').style.display = 'block';
          }
        }

        // Address fields
        document.querySelector('input[name="door_no"]').value = husband?.door_no || wife?.door_no || '';
        document.querySelector('input[name="street"]').value = husband?.street || wife?.street || '';
        document.querySelector('select[name="state"]').value = husband?.state || wife?.state || '';
        document.querySelector('select[name="district"]').value = husband?.district || wife?.district || '';
        document.querySelector('input[name="pincode"]').value = husband?.pincode || wife?.pincode || '';
      }
    } catch (err) {
      console.error("Error loading family data:", err);
    }
  });

  document.getElementById('editFamilyForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);

    try {
      const res = await fetch('/update-family', {
        method: 'POST',
        body: formData
      });

      const result = await res.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Success!',
          text: 'Family updated successfully!',
          confirmButtonColor: '#6f4e37'
        }).then(() => {
          window.location.href = '/my-family';
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: result.message || 'Failed to update family',
          confirmButtonColor: '#6f4e37'
        });
      }
    } catch (err) {
      console.error("Update error:", err);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Network error occurred',
        confirmButtonColor: '#6f4e37'
      });
    }
  });
</script>

</body>
</html>