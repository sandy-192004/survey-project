<!DOCTYPE html>
<html>
<head>
  <title>Edit Family</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body class="container mt-4">

<h3>Edit Family</h3>

<% if (!parent) { %>
    <div class="alert alert-danger">Parent record missing</div>
  <% } else { %>
  

<form method="POST" action="/family/update/<%= parent.id %>">

  <!-- Parent -->
  <h5>Parent Details</h5>
  <input class="form-control mb-2" name="parent[name]" value="<%= parent.name %>" placeholder="Name">
  <input class="form-control mb-2" name="parent[mobile]" value="<%= parent.mobile %>" placeholder="Mobile">
  <input class="form-control mb-2" name="parent[email]" value="<%= parent.email %>" placeholder="Email">
  <input class="form-control mb-2" name="parent[occupation]" value="<%= parent.occupation %>" placeholder="Occupation">

  <h6>Address</h6>
  <input class="form-control mb-2" name="parent[door_no]" value="<%= parent.door_no %>" placeholder="Door No">
  <input class="form-control mb-2" name="parent[street]" value="<%= parent.street %>" placeholder="Street">
  <input class="form-control mb-2" name="parent[district]" value="<%= parent.district %>" placeholder="District">
  <input class="form-control mb-2" name="parent[state]" value="<%= parent.state %>" placeholder="State">
  <input class="form-control mb-2" name="parent[pincode]" value="<%= parent.pincode %>" placeholder="Pincode">

  <!-- Children -->
  <h5 class="mt-4">Children</h5>
  <div id="children">
    <% children.forEach((c, i) => { %>
      <div class="border p-2 mb-2 child">
        <input class="form-control mb-1" name="children[<%= i %>][name]" value="<%= c.name %>" placeholder="Child Name">
        <input class="form-control mb-1" name="children[<%= i %>][occupation]" value="<%= c.occupation %>" placeholder="Occupation">
        <button type="button" class="btn btn-sm btn-danger removeChild">Remove</button>
      </div>
    <% }) %>
  </div>

  <button type="button" class="btn btn-secondary my-2" id="addChild">+ Add Child</button>

  <div class="mt-3">
    <button class="btn btn-primary">Update Family</button>
    <a href="/dashboard" class="btn btn-outline-secondary">Cancel</a>
  </div>

</form>
<% } %>

<script>
    let index = <%= children && children.length ? children.length : 0 %>;
  
    $("#addChild").click(() => {
      $("#children").append(`
        <div class="border p-2 mb-2 child">
          <input class="form-control mb-1" name="children[${index}][name]" placeholder="Child Name">
          <input class="form-control mb-1" name="children[${index}][occupation]" placeholder="Occupation">
          <button type="button" class="btn btn-sm btn-danger removeChild">Remove</button>
        </div>
      `);
      index++;
    });
  
    $(document).on("click", ".removeChild", function () {
      $(this).closest(".child").remove();
    });
  </script>

</body>
</html>
