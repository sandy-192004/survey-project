<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Portal - Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <!-- Success Toast -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
            <div class="d-flex">
                <div class="toast-body">
                    âœ“ Family saved successfully!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-5" href="/">
                <i class="bi bi-house-heart"></i> Family Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="#" data-bs-toggle="modal" data-bs-target="#familyCheckModal">
                            <i class="bi bi-people-fill"></i> Family
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/pooja-booking">
                            <i class="bi bi-calendar-heart"></i> Pooja Booking
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1>Welcome to Family Portal</h1>
                <p class="lead">Manage your family information and book pooja services.</p>
            </div>
        </div>
    </div>

    <!-- Family Check Modal -->
    <div class="modal fade" id="familyCheckModal" tabindex="-1" aria-labelledby="familyCheckModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="familyCheckModalLabel">My Family Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="familyContent">
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show success toast if ?success=true
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            const toastElement = document.getElementById('successToast');
            toastElement.style.display = 'flex';
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            window.history.replaceState({}, document.title, window.location.pathname);
        }

        // Handle family modal show
        const familyModal = document.getElementById('familyCheckModal');
        familyModal.addEventListener('show.bs.modal', function () {
            const familyContent = document.getElementById('familyContent');
            familyContent.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;

            fetch('/my-family-json')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const parent = data.parent;
                    const children = data.children;
                    let html = `
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Parent Details</h5>
                                <p><strong>Name:</strong> ${parent.name}</p>
                                <p><strong>Wife Name:</strong> ${parent.wife_name || 'N/A'}</p>
                                <p><strong>Mobile:</strong> ${parent.mobile}</p>
                                <p><strong>Email:</strong> ${parent.email}</p>
                                <p><strong>Occupation:</strong> ${parent.occupation}</p>
                                <p><strong>Address:</strong> ${parent.door_no}, ${parent.street}, ${parent.district}, ${parent.state} - ${parent.pincode}</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Children Details</h5>
                    `;
                    if (children.length > 0) {
                        children.forEach(child => {
                            html += `
                                <div class="mb-3 p-2 border rounded">
                                    <p><strong>Name:</strong> ${child.name}</p>
                                    <p><strong>Occupation:</strong> ${child.occupation}</p>
                                    <p><strong>Date of Birth:</strong> ${child.dob}</p>
                                    <p><strong>Gender:</strong> ${child.gender}</p>
                                </div>
                            `;
                        });
                    } else {
                        html += '<p>No children details available.</p>';
                    }
                    html += `
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/my-family" class="btn btn-primary">Edit Family Details</a>
                        </div>
                    `;
                    familyContent.innerHTML = html;
                } else {
                    familyContent.innerHTML = `
                        <div class="text-center">
                            <div class="alert alert-warning">
                                <h5>No family details found</h5>
                                <p>You haven't added your family details yet.</p>
                                <button type="button" class="btn btn-primary" onclick="window.location.href='/family-form'">Add Details</button>
                            </div>
                        </div>
                    `;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                familyContent.innerHTML = `
                    <div class="text-center">
                        <div class="alert alert-danger">
                            <h5>Error Loading Family Details</h5>
                            <p>An error occurred while loading your family details. Please try again.</p>
                        </div>
                    </div>
                `;
            });
        });
    </script>
</body>
</html>
