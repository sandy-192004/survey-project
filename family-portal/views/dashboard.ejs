<!DOCTYPE html>
<html>
<head>
  <title>Family Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">

  <h1 class="mb-4">My Family Members</h1>

  <div class="row g-4">
    <% results.forEach(member => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= member.name %></h5>
            <p class="text-muted mb-1"><%= member.relationship %></p>
            <small><%= member.occupation || 'N/A' %></small>
            <p class="text-muted mb-1">Mobile: <%= member.mobile %></p>
            <p class="text-muted mb-1">DOB: <%= member.dob ? new Date(member.dob).toLocaleDateString() : 'N/A' %></p>
            <div class="mt-3">
              <span class="badge bg-secondary"><%= member.member_type %></span>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (totalPages > 1) { %>
  <nav class="mt-4">
    <ul class="pagination justify-content-center">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>">
            <%= i %>
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
  <% } %>

  <div class="mt-4">
    <a href="/my-family" class="btn btn-primary">View Full Family</a>
    <a href="/logout" class="btn btn-secondary">Logout</a>
  </div>

</div>
</body>
</html>
 


