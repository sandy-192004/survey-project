<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Member</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Brown Theme -->
  <style>
    :root {
      --brown-main: #6f4e37;
      --brown-light: #f5efe9;
      --brown-border: #d6c2b3;
    }

    body {
      background-color: var(--brown-light);
    }

    h3, h5 {
      color: var(--brown-main);
      font-weight: 600;
    }

    .card {
      border: 1px solid var(--brown-border);
      border-radius: 10px;
      margin-bottom: 15px;
    }

    .btn-primary {
      background-color: var(--brown-main);
      border-color: var(--brown-main);
    }

    .btn-primary:hover {
      background-color: #5a3f2c;
      border-color: #5a3f2c;
    }

    .form-control:focus {
      border-color: var(--brown-main);
      box-shadow: 0 0 0 0.2rem rgba(111, 78, 55, 0.25);
    }

    .img-thumbnail {
      max-height: 150px;
      object-fit: cover;
      display: none;
      margin-top: 8px;
    }
  </style>
</head>
<body class="container-fluid mt-4">

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
  <h3 class="mb-3 mb-md-0">Edit Member</h3>
  <a href="/my-family" class="btn btn-secondary">Back to My Family</a>
</div>

<form id="editMemberForm" enctype="multipart/form-data">
  <div class="row g-2">
    <div class="col-12">
      <div class="card p-3">
        <div class="row g-2">
          <div class="col-12 col-md-6">
            <h5 class="mb-3 small">Member Details</h5>
            <input class="form-control mb-2 small" name="name" placeholder="Name" required>
            <input class="form-control mb-2 small" name="mobile" placeholder="Mobile" type="tel">
            <input class="form-control mb-2 small" name="occupation" placeholder="Occupation">
            <input type="date" class="form-control mb-2 small" name="dob">
            <select class="form-control mb-2 small" name="gender">
              <option value="">Select Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Other">Other</option>
            </select>
            <select class="form-control mb-2 small" name="relationship">
              <option value="">Select Relationship</option>
              <option value="husband">Husband</option>
              <option value="wife">Wife</option>
              <option value="son">Son</option>
              <option value="daughter">Daughter</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="col-12 col-md-6">
            <h5 class="mb-3 small">Photo</h5>
            <div class="mb-3">
              <label class="form-label small">Member Photo</label>
              <input type="file" class="form-control small" name="photo" accept="image/*" onchange="handlePhotoSelect(this, 'photo_preview')">
              <img id="photo_preview" class="img-thumbnail">
            </div>
          </div>
        </div>

        <h5 class="mt-4 mb-3 small">Address</h5>
        <div class="row g-2">
          <div class="col-12 col-md-6">
            <input class="form-control mb-2 small" name="door_no" placeholder="Door No">
            <input class="form-control mb-2 small" name="street" placeholder="Street">
          </div>
          <div class="col-12 col-md-6">
            <select class="form-control mb-2 small" name="state" id="state">
              <option value="">Select State</option>
            </select>
            <select class="form-control mb-2 small" name="district" id="district">
              <option value="">Select District</option>
            </select>
          </div>
        </div>

        <input class="form-control mb-3 small" name="pincode" placeholder="Pincode" type="text">

        <div class="mt-4 d-flex gap-2">
          <button type="submit" class="btn btn-primary flex-fill">Update</button>
          <a href="/my-family" class="btn btn-secondary flex-fill">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  function handlePhotoSelect(input, previewId) {
    if(input.files && input.files[0]){
      const reader = new FileReader();
      reader.onload = function(e){
        const img = document.getElementById(previewId);
        img.src = e.target.result;
        img.style.display = 'block';
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  // Load existing member data
  document.addEventListener("DOMContentLoaded", async () => {
    try {
      const memberId = window.location.pathname.split('/').pop();
      const res = await fetch(`/get-child/${memberId}`);
      const member = await res.json();

      if (member) {
        document.querySelector('input[name="name"]').value = member.name || '';
        document.querySelector('input[name="mobile"]').value = member.mobile || '';
        document.querySelector('input[name="occupation"]').value = member.occupation || '';
        document.querySelector('input[name="dob"]').value = member.dob || '';
        document.querySelector('select[name="gender"]').value = member.gender || '';
        document.querySelector('select[name="relationship"]').value = member.relationship || '';
        document.querySelector('input[name="door_no"]').value = member.door_no || '';
        document.querySelector('input[name="street"]').value = member.street || '';
        document.querySelector('select[name="state"]').value = member.state || '';
        document.querySelector('select[name="district"]').value = member.district || '';
        document.querySelector('input[name="pincode"]').value = member.pincode || '';

        if (member.photo) {
          document.getElementById('photo_preview').src = '/uploads/' + member.photo;
          document.getElementById('photo_preview').style.display = 'block';
        }
      }
    } catch (err) {
      console.error("Error loading member data:", err);
    }
  });

  document.getElementById('editMemberForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const memberId = window.location.pathname.split('/').pop();
    const formData = new FormData(e.target);

    try {
      const res = await fetch(`/update-member/${memberId}`, {
        method: 'POST',
        body: formData
      });

      const result = await res.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Success!',
          text: 'Member updated successfully!',
          confirmButtonColor: '#6f4e37'
        }).then(() => {
          window.location.href = '/my-family';
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: result.message || 'Failed to update member',
          confirmButtonColor: '#6f4e37'
        });
      }
    } catch (err) {
      console.error("Update error:", err);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Network error occurred',
        confirmButtonColor: '#6f4e37'
      });
    }
  });
</script>

</body>
</html>
