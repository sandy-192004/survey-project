<!DOCTYPE html>
<html>
<head>
  <title>Edit Family</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-4">

  <!-- Top X Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Edit Family Member</h4>
    <a href="/admin/dashboard" class="btn btn-danger btn-sm">X</a>
  </div>



  <form class="card p-3" method="POST" action="/admin/edit/<%= member.id %>">
    <div class="mb-2">
      <label class="form-label">Name</label>
      <input class="form-control" name="name" value="<%= member.name %>" required>
    </div>

    <div class="mb-2">
      <label class="form-label">Mobile</label>
      <input class="form-control" name="mobile" value="<%= member.mobile %>" required>
    </div>

    <div class="mb-2">
      <label class="form-label">Email</label>
      <input class="form-control" name="email" value="<%= member.email %>" required>
    </div>

    <div class="mb-2">
      <label class="form-label">Occupation</label>
      <input class="form-control" name="occupation" value="<%= member.occupation %>">
    </div>

    <div class="mb-2">
      <label class="form-label">Door No</label>
      <input class="form-control" name="door_no" value="<%= member.door_no %>">
    </div>

    <div class="mb-2">
      <label class="form-label">Street</label>
      <input class="form-control" name="street" value="<%= member.street %>">
    </div>

    <div class="mb-2">
      <label class="form-label">District</label>
      <input class="form-control" name="district" value="<%= member.district %>">
    </div>

    <div class="mb-2">
      <label class="form-label">State</label>
      <input class="form-control" name="state" value="<%= member.state %>">
    </div>

    <div class="mb-2">
      <label class="form-label">Pincode</label>
      <input class="form-control" name="pincode" value="<%= member.pincode %>">
    </div>

    <div class="mb-2">
      <label class="form-label">Date of Birth</label>
      <input type="date" class="form-control" name="dob" value="<%= member.dob ? member.dob.toISOString().split('T')[0] : '' %>">
    </div>

    <div class="mb-2">
      <label class="form-label">Gender</label>
      <select class="form-control" name="gender">
        <option value="Male" <%= member.gender === 'Male' ? 'selected' : '' %>>Male</option>
        <option value="Female" <%= member.gender === 'Female' ? 'selected' : '' %>>Female</option>
        <option value="Other" <%= member.gender === 'Other' ? 'selected' : '' %>>Other</option>
      </select>
    </div>

  

    <button class="btn btn-success">Update</button>

  </form>
</div>

</body>
</html>
