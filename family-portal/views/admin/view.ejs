<!DOCTYPE html>
<html>
<head>
  <title>View Family Member</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">

<% if (updated) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Member details have been updated successfully!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<h3>Family Member Details</h3>

<% if (!member) { %>
    <div class="alert alert-danger">Member not found</div>
<% } else { %>

<div class="row">
  <!-- Husband Details Card -->
  <div class="col-md-6 mb-3">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Husband Details</h5>
      </div>
      <div class="card-body d-flex">
        <div class="flex-grow-1">
          <p><strong>Name:</strong> <%= member.husband_name %></p>
          <p><strong>Mobile:</strong> <%= member.mobile %></p>
          <p><strong>Occupation:</strong> <%= member.occupation %></p>
          <h6>Address</h6>
          <p><strong>Door No:</strong> <%= member.door_no %></p>
          <p><strong>Street:</strong> <%= member.street %></p>
          <p><strong>District:</strong> <%= member.district %></p>
          <p><strong>State:</strong> <%= member.state %></p>
          <p><strong>Pincode:</strong> <%= member.pincode %></p>
        </div>
        <% if (member.husband_photo) { %>
          <div class="ms-3">
            <img src="/uploads/parents/<%= member.husband_photo %>" class="img-thumbnail" style="max-width: 120px; max-height: 120px;">
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Wife Details Card -->
  <div class="col-md-6 mb-3">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Wife Details</h5>
      </div>
      <div class="card-body d-flex">
        <div class="flex-grow-1">
          <p><strong>Name:</strong> <%= member.wife_name %></p>
          <p><strong>Mobile:</strong> <%= member.mobile %></p>
          <p><strong>Occupation:</strong> <%= member.occupation %></p>
          <h6>Address</h6>
          <p><strong>Door No:</strong> <%= member.door_no %></p>
          <p><strong>Street:</strong> <%= member.street %></p>
          <p><strong>District:</strong> <%= member.district %></p>
          <p><strong>State:</strong> <%= member.state %></p>
          <p><strong>Pincode:</strong> <%= member.pincode %></p>
        </div>
        <% if (member.wife_photo) { %>
          <div class="ms-3">
            <img src="/uploads/parents/<%= member.wife_photo %>" class="img-thumbnail" style="max-width: 120px; max-height: 120px;">
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<% if (children && children.length > 0) { %>
<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">Children Details</h5>
    <% children.forEach(child => { %>
      <div class="border p-2 mb-2 d-flex">
        <div class="flex-grow-1">
          <p><strong>Name:</strong> <%= child.name %></p>
          <p><strong>Occupation:</strong> <%= child.occupation %></p>
          <p><strong>Date of Birth:</strong>
            <%= child.dob && new Date(child.dob).toString() !== 'Invalid Date' ? new Date(child.dob).toLocaleDateString('en-IN', {
              day: '2-digit',
              month: 'short',
              year: 'numeric'
            }) : 'N/A' %>
          </p>
          <p><strong>Gender:</strong> <%= child.gender %></p>
        </div>
        <% if (child.photo) { %>
          <div class="ms-3">
            <img src="/uploads/children/<%= child.photo %>" class="img-thumbnail" style="max-width: 150px; max-height: 150px;">
          </div>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>
<% } %>

<div class="mt-3">
  <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
  <a href="/admin/edit/<%= member.family_id %>" class="btn btn-primary">Edit</a>
</div>

<% } %>

</body>
</html>


