<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Family</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      margin: 0;
      background-color: #f5e6d3;
    }

    .family-header {
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      background: linear-gradient(135deg, #8B4513, #A0522D);
      color: white;
      padding: 1.5rem 1rem;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
    }

    .section-title {
      margin: 25px 0 10px;
      font-weight: bold;
      color: #5a3e2b;
    }

    .parents-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .children-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .member-card {
      min-width: 300px;
      max-width: 500px;
      background-color: #f9f1e6;
      border-radius: 14px;
      padding: 20px;
      position: relative;
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
      display: flex;
      justify-content: space-evenly;
      align-items: flex-start;
    }

    .member-info {
      flex: 1;
      padding-right: 19px;
    }

    .member-name {
      font-size: 2rem;
      font-weight: bold;
      color: #5a3e2b;
      margin-bottom: 3px;
    }

    .info-item {
      font-size: 1rem;
      color: #4b3621;
      margin-bottom: 4px;
    }

    .member-photo {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 12px;
      border: 2px solid #d1b89a;
    }

    @media (max-width: 768px) {
      .parents-row,
      .children-row {
        flex-wrap: wrap;
      }

      .member-card {
        min-width: 100%;
      }
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="family-header">
    Family Details
  </div>

  <div class="container mt-4">

    <% 
    let members = [];
    if (member) {
      if (member.husband_name) {
        members.push({
          member_type: 'parent',
          name: member.husband_name,
          relationship: 'husband',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.husband_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.husband_photo
        });
      }
      if (member.wife_name) {
        members.push({
          member_type: 'parent',
          name: member.wife_name,
          relationship: 'wife',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.wife_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.wife_photo
        });
      }
    }

    if (children) {
      children.forEach(child => {
        members.push({
          member_type: 'child',
          name: child.name,
          relationship: child.relationship,
          mobile: child.mobile,
          occupation: child.occupation,
          gender: child.gender,
          dob: child.dob,
          door_no: child.door_no,
          street: child.street,
          district: child.district,
          state: child.state,
          pincode: child.pincode,
          photo: child.photo
        });
      });
    }
    %>

    <% if (!members.length) { %>
      <div class="text-center mt-4 text-muted">
        <h4>No family data found</h4>
      </div>
    <% } %>

    <!-- PARENTS -->
    <h4 class="section-title">Parents</h4>
    <div class="parents-row">
      <% members.forEach(member => { %>
        <% if (member.member_type === 'parent') { %>
          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship %></div>
              <div class="info-item"><b>Mobile:</b> <%= member.mobile || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Address:</b>
                <%= [member.door_no, member.street, member.district, member.state, member.pincode].filter(Boolean).join(', ') || '-' %>
              </div>
            </div>



            <% if (member.photo) { %>
              <% let photoSrc = member.photo; %>
              <% // Remove size from photo path if present %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>
        <% } %>
      <% }) %>
    </div>

    <!-- CHILDREN -->
    <h4 class="section-title">Children</h4>
    <div class="children-row">
      <% members.forEach(member => { %>
        <% if (member.member_type === 'child') { %>
          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship || '-' %></div>
              <div class="info-item"><b>DOB:</b>
                <%= member.dob ? new Date(member.dob).toISOString().split('T')[0] : '-' %>
              </div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= member.door_no || '-' %></div>
            </div>

            <% if (member.photo) { %>
              <% let photoSrc = member.photo; %>
              <% // Remove size from photo path if present %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>
        <% } %>
      <% }) %>
    </div>

    <!-- BACK TO DASHBOARD (BOTTOM) -->
    <div class="text-center mt-5 mb-4" ></div>
      <a href="/admin/dashboard" class="btn btn-primary px-4" style="background-color: #8B4513;  border:2px solid #5a3e2b" >
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
      </a>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/family.js"></script>



</body>
</html>