<html>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>View Family</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    /* ===== GLOBAL ===== */
    body {
      margin: 0;
      background-color: #f5e6d3;
      
    }

    /* ===== FULL WIDTH HEADER ===== */
    .family-header {
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      background: linear-gradient(135deg, #8B4513, #A0522D);
      color: white;
      padding: 1.5rem 1rem;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
    }

    /* ===== SECTION ===== */
    .section-title {
      margin: 25px 0 10px;
      font-weight: bold;
      color: #5a3e2b;
    }

    /* ===== ROWS ===== */
    .parents-row {
      display: flex;
      gap: 20px;
      flex-wrap: nowrap;
      overflow-x: auto;
      padding-bottom: 10px;
    }

    .children-row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      overflow-x: auto;
      padding-bottom: 10px;
    }

    /* ===== CARD ===== */
    .member-card {
      min-width: 420px;
      max-width: 720px;
      background-color: #f9f1e6;
      border-radius: 14px;
      padding: 100px;
      position: relative;
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
      display: flex;
      justify-content: space-evenly;
      align-items: flex-start;
    }

    /* ===== LEFT DETAILS ===== */
    .member-info {
      flex: 1;
      padding-right: 19px;
    }

    .member-name {
      font-size: 2rem;
      font-weight: bold;
      color: #5a3e2b;
      margin-bottom: 3px;
    }

    .info-item {
      font-size: 1rem;
      color: #4b3621;
      margin-bottom: 4px;
    }

    /* ===== PHOTO ===== */
    .member-photo {
      width: 220px;
      height: 220px;
      object-fit: cover;
      border-radius: 12px;
      border: 2px solid #d1b89a;
    }



    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
      .parents-row,
      .children-row {
        flex-wrap: wrap;
      }

      .member-card {
        min-width: 100%;
      }
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="family-header">
    Family Details
  </div>

  <div class="container mt-4">

    <% 
    // Prepare members array from member and children data
    let members = [];
    if (member) {
      // Add husband
      if (member.husband_name) {
        members.push({
          member_type: 'parent',
          name: member.husband_name,
          relationship: 'husband',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.husband_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.husband_photo
        });
      }
      // Add wife
      if (member.wife_name) {
        members.push({
          member_type: 'parent',
          name: member.wife_name,
          relationship: 'wife',
          mobile: member.mobile,
          occupation: member.occupation,
          gender: member.wife_gender,
          door_no: member.door_no,
          street: member.street,
          district: member.district,
          state: member.state,
          pincode: member.pincode,
          photo: member.wife_photo
        });
      }
    }
    // Add children
    if (children) {
      children.forEach(child => {
        members.push({
          member_type: 'child',
          name: child.name,
          relationship: child.relationship,
          mobile: child.mobile,
          occupation: child.occupation,
          gender: child.gender,
          dob: child.dob,
          door_no: child.door_no,
          street: child.street,
          district: child.district,
          state: child.state,
          pincode: child.pincode,
          photo: child.photo
        });
      });
    }
    %>


<!-- Husband Details Card -->
<div class="card mb-3">
  <div class="card-header">
    <h5 class="card-title mb-0">Husband Details</h5>
  </div>
  <div class="card-body d-flex">
    <div class="flex-grow-1">
      <a href="/admin/edit/<%= member.family_id %>" class="text-primary mb-2"><i class="fas fa-edit"></i></a>
      <p><strong>Name:</strong> <%= member.husband_name %></p>
      <p><strong>Mobile:</strong> <%= member.mobile %></p>
      <p><strong>Occupation:</strong> <%= member.occupation %></p>
      <p><strong>Gender:</strong> <%= member.husband_gender %></p>
      <h6>Address</h6>
      <p><strong>Door No:</strong> <%= member.door_no %></p>
      <p><strong>Street:</strong> <%= member.street %></p>
      <p><strong>District:</strong> <%= member.district %></p>
      <p><strong>State:</strong> <%= member.state %></p>
      <p><strong>Pincode:</strong> <%= member.pincode %></p>
    </div>
    <% if (member.husband_photo) { %>
      <% let husbandPhotoSrc = member.husband_photo; %>
      <% // Remove size from photo path if present %>
      <% const sizeMatchHusband = husbandPhotoSrc.match(/^(.+)\(\d+\)$/); %>
      <% if (sizeMatchHusband) husbandPhotoSrc = sizeMatchHusband[1]; %>
      <% // Normalize path %>
      <% husbandPhotoSrc = husbandPhotoSrc.replace(/^\/+/, '').replace(/^uploads\//, ''); %>
      <% // If no folder, assume parents %>
      <% if (husbandPhotoSrc.indexOf('/') === -1) { %>
        <% husbandPhotoSrc = 'parents/' + husbandPhotoSrc; %>
      <% } %>
      <% if (!husbandPhotoSrc.match(/\.(png|jpg|jpeg|webp)$/i)) husbandPhotoSrc += '.png'; %>
      <div class="ms-3"><img src="/survey-project/family-portal/middleware/upload.js"</div>/<%= husbandPhotoSrc %>"
             class="img-thumbnail"
             style="max-width: 120px; max-height: 120px;">
      </div>
    <% } %>
  </div>
</div>

<!-- Wife Details Card -->
<div class="card mb-3">
  <div class="card-header">
    <h5 class="card-title mb-0">Wife Details</h5>
  </div>
  <div class="card-body d-flex">
    <div class="flex-grow-1">
      <a href="/admin/edit/<%= member.family_id %>" class="text-primary mb-2"><i class="fas fa-edit"></i></a>
      <p><strong>Name:</strong> <%= member.wife_name %></p>
      <p><strong>Mobile:</strong> <%= member.mobile %></p>
      <p><strong>Occupation:</strong> <%= member.occupation %></p>
      <p><strong>Gender:</strong> <%= member.wife_gender %></p>
      <h6>Address</h6>
      <p><strong>Door No:</strong> <%= member.door_no %></p>
      <p><strong>Street:</strong> <%= member.street %></p>
      <p><strong>District:</strong> <%= member.district %></p>
      <p><strong>State:</strong> <%= member.state %></p>
      <p><strong>Pincode:</strong> <%= member.pincode %></p>
    </div>
    <% if (member.wife_photo) { %>
      <% let wifePhotoSrc = member.wife_photo; %>
      <% // Remove size from photo path if present %>
      <% const sizeMatchWife = wifePhotoSrc.match(/^(.+)\(\d+\)$/); %>
      <% if (sizeMatchWife) wifePhotoSrc = sizeMatchWife[1]; %>
      <% // Normalize path %>
      <% wifePhotoSrc = wifePhotoSrc.replace(/^\/+/, '').replace(/^uploads\//, ''); %>
      <% // If no folder, assume parents %>
      <% if (wifePhotoSrc.indexOf('/') === -1) { %>
        <% wifePhotoSrc = 'parents/' + wifePhotoSrc; %>
      <% } %>
      <% if (!wifePhotoSrc.match(/\.(png|jpg|jpeg|webp)$/i)) wifePhotoSrc += '.png'; %>
      <div class="ms-3">
        <img src="/uploads/<%= wifePhotoSrc %>"
             class="img-thumbnail"
             style="max-width: 120px; max-height: 120px;"
             onerror="this.src='/images/nophoto.png';">
      </div>
    <% } %>
  </div>
</div>

<% if (children && children.length > 0) { %>
<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">Children Details</h5>
    <% children.forEach(child => { %>
      <div class="border p-2 mb-2 d-flex">
        <div class="flex-grow-1">
          <p><strong>Name:</strong> <%= child.name %> <a href="/admin/edit/<%= member.family_id %>" class="text-primary ms-2"><i class="fas fa-edit"></i></a></p>
          <p><strong>Relationship:</strong> <%= child.relationship %></p>
          <p><strong>Occupation:</strong> <%= child.occupation %></p>
          <p><strong>Date of Birth:</strong>
            <%= child.dob && new Date(child.dob).toString() !== 'Invalid Date' ? new Date(child.dob).toLocaleDateString('en-IN', {
              day: '2-digit',
              month: 'short',
              year: 'numeric'
            }) : 'N/A' %>
          </p>
          <p><strong>Gender:</strong> <%= child.gender %></p>
          <h6>Address</h6>
          <p><strong>Door No:</strong> <%= child.door_no %></p>
          <p><strong>Street:</strong> <%= child.street %></p>
          <p><strong>District:</strong> <%= child.district %></p>
          <p><strong>State:</strong> <%= child.state %></p>
          <p><strong>Pincode:</strong> <%= child.pincode %></p>
        </div>
        <% if (child.photo) { %>
          <% let childPhotoSrc = child.photo; %>
          <% // Remove size from photo path if present %>
          <% const sizeMatchChild = childPhotoSrc.match(/^(.+)\(\d+\)$/); %>
          <% if (sizeMatchChild) childPhotoSrc = sizeMatchChild[1]; %>
          <% // Normalize path %>
          <% childPhotoSrc = childPhotoSrc.replace(/^\/+/, '').replace(/^uploads\//, ''); %>
          <% // If no folder, assume children %>
          <% if (childPhotoSrc.indexOf('/') === -1) { %>
            <% childPhotoSrc = 'children/' + childPhotoSrc; %>
          <% } %>
          <% if (!childPhotoSrc.match(/\.(png|jpg|jpeg|webp)$/i)) childPhotoSrc += '.png'; %>
          <div class="ms-3">
            <img src="/uploads/<%= childPhotoSrc %>"
                 class="img-thumbnail"
                 style="max-width: 150px; max-height: 150px;">
          </div>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>
<% } %>

    <% if (!members.length) { %>
      <div class="text-center mt-4 text-muted">
        <h4>No family data found</h4>
      </div>
    <% } %>

    <!-- ================= PARENTS ================= -->
    <h4 class="section-title">Parents</h4>
    <div class="parents-row">

      <% members.forEach(member => { %>
        <% if (member.member_type === 'parent') { %>

          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship %></div>
              <div class="info-item"><b>Mobile:</b> <%= member.mobile || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Gender:</b>
                <%
                  let gender = member.gender;
                  if (!gender || gender === '-') {
                    if (member.relationship === 'husband') gender = 'Male';
                    else if (member.relationship === 'wife') gender = 'Female';
                    else gender = '-';
                  }
                %>
                <%= gender %>
              </div>
              <div class="info-item"><b>Address:</b> <%= [member.door_no, member.street, member.district, member.state, member.pincode].filter(Boolean).join(', ') || '-' %></div>
            </div>

            <% if (member.photo && member.photo.trim() !== "") { %>
              <% let photoSrc = member.photo; %>
              <% // Remove size from photo path if present %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>

        <% } %>
      <% }) %>

    </div>

    <!-- ================= CHILDREN ================= -->
    <h4 class="section-title">Children</h4>
    <div class="children-row">

      <% members.forEach(member => { %>
        <% if (member.member_type === 'child') { %>

          <div class="member-card">
            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship || '-' %></div>
              <div class="info-item"><b>DOB:</b>
                <%= member.dob
                    ? new Date(member.dob).toISOString().split('T')[0]
                    : '-'
                %>
              </div>
              <div class="info-item"><b>Gender:</b>
                <%
                  let gender = member.gender;
                  if (!gender || gender === '-') {
                    if (member.relationship === 'husband') gender = 'Male';
                    else if (member.relationship === 'wife') gender = 'Female';
                    else gender = '-';
                  }
                %>
                <%= gender %>
              </div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= member.door_no || '-' %></div>
            </div>

            <% if (member.photo && member.photo.trim() !== "") { %>
              <% let photoSrc = member.photo; %>
              <% // Remove size from photo path if present %>
              <% const sizeMatch = photoSrc.match(/^(.+)\(\d+\)$/); %>
              <% if (sizeMatch) photoSrc = sizeMatch[1]; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>

        <% } %>
      <% }) %>

    </div>




  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/family.js"></script>

</body>
</html>
