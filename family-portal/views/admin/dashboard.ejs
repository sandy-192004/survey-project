<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin View- Family Portal</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: #8B4513;
      --secondary-color: #ecbd7bd5;
      --success-color: #16A34A;
      --warning-color: #F59E0B;
      --danger-color: #DC2626;
      --text-secondary: #ffffffd8;
      --card-shadow: 0 8px 20px rgba(9, 8, 8, 0.08);
      --card-shadow-hover: 0 14px 30px rgba(0, 0, 0, 0.12);
    }

    body {
   
      font-family: 'Inter', sans-serif;
      background: url("/images/pic.png") no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      
    }

    .header {
      background: #0000007b;
       color: #ffffff;
      border-radius: 14px;
      padding: 1rem 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: var(--card-shadow);
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;

    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px,1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
       color: #ffffff;
    }

    .stat-card {
      background: #00000068;
      padding: 1rem;
      border-radius: 10px;
      text-align: center;
      box-shadow: var(--card-shadow);
       color: #ffffff;
    }

    .family-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }

    .family-card {
      background: #00000068;
      border-radius: 14px;
      box-shadow: var(--card-shadow);
      overflow: hidden;
      cursor: pointer;
      position: relative;
      transition: all 0.3s ease;
    }

    .family-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--card-shadow-hover);
    }

    .edit-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: #80353585;
      color: rgb(255, 255, 255);
      border: none;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
    }

    .edit-btn:hover {
      background: #7a4545;
    }

    .delete-btn {
      position: absolute;
      bottom: 10px;
      right: 10px;
      background: #7a4545;
      color: rgb(255, 255, 255);
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      font-size: 12px;
      font-weight: bold;
      cursor: pointer;
      z-index: 10;
    }

    .delete-btn:hover {
      background: #c82333;
    }

    .family-card-header {
      background: linear-gradient(135deg, #5b3722, #8a815b);
      padding: 0.75rem;
      color: #ffffffe2;
    }

    .family-card-body {
      padding: 1rem;
      color: rgba(255, 255, 255, 0.816);
    }

    .children-badge {
      background: #c1a972;
      color: var(--primary-color);
      padding: 0.35rem 0.7rem;
      border-radius: 999px;
      font-size: 0.75rem;
      display: inline-block;
      margin-top: 0.5rem;
    }

    /* Pagination Styles */
    .pagination {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    .pagination .page-link {
      color: var(--primary-color);
      background-color: rgba(255, 255, 255, 0.9);
      border: 2px solid var(--primary-color);
      border-radius: 50px;
      padding: 0.25rem 0.5rem;
      margin: 0 0.125rem;
      font-weight: 600;
      font-size: 0.875rem;
      transition: all 0.1s ease;
      box-shadow: var(--card-shadow);
    }

    .pagination .page-link:hover {
      background-color: var(--primary-color);
      color: rgb(19, 19, 19);
      transform: translateY(-2px);
      box-shadow: var(--card-shadow-hover);
    }

    .pagination .page-item.active .page-link {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      color: rgb(0, 0, 0);
      box-shadow: 0 0 0 0.2rem rgba(139, 69, 19, 0.25);
    }

    .pagination .page-item.disabled .page-link {
      color: #6c757d;
      background-color: #e9ecef;
      border-color: #dee2e6;
    }
  </style>
</head>

<body>
<div class="container-fluid p-4">

  <!-- HEADER -->
  <div class="header">
    <div>
      <h4 class="fw-bold mb-0" style="color:  #ad9149;">
        <i class="fas fa-tachometer-alt me-2"></i>Family Dashboard
      </h4>
      <small style="color: rgba(255, 254, 254, 0.799);">Manage and monitor family registrations</small>
    </div>

    <div class="dropdown" style="position: absolute; right: 1.5rem;">
      <button class="btn btn-lg" style="color:  #f2f1f1;" data-bs-toggle="dropdown">â‹®</button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="/admin/export/excel"><i class="fas fa-file-excel"></i> Excel</a></li>
        <li><a class="dropdown-item" href="/admin/export/pdf"><i class="fas fa-file-pdf"></i> PDF</a></li>
      </ul>
    </div>
  </div>

  <!-- ALERT -->
  <% if (locals.updated) { %>
  <div class="alert alert-success alert-dismissible fade show mb-4">
    Family details updated successfully!
    <button class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>


  <!-- STATS -->
  <% if (stats) { %>
  <div class="stats-grid">
    <div class="stat-card">
      <i class="fas fa-users fa-2x text-primary"></i>
      <h4><%= stats.totalFamilies %></h4>
      <small>Families</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-user-friends fa-2x text-success"></i>
      <h4><%= stats.totalMembers %></h4>
      <small>Members</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-child fa-2x text-warning"></i>
      <h4><%= stats.totalChildren %></h4>
      <small>Children</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-calendar-plus fa-2x text-danger"></i>
      <h4><%= stats.recentFamilies %></h4>
      <small>Recent</small>
    </div>
  </div>
  <% } %>

  <!-- SEARCH -->
  <div class="card mb-2 search-form" style="background-color: #00000016;">
  <div class="card-body">

    <style>
      .search-form input,
      .search-form select {
        width: 170px;
      }

      .search-form button {
        padding: 6px 14px;
        font-size: 14px;
      }
    </style>

    <%- include("search-filter-form") %>

  </div>
</div>


  <!-- FAMILY CARDS -->
  <div class="family-grid">
    <% results.forEach(member => { %>
    <div class="family-card" onclick="location='/admin/view/<%= member.id %>'">

      <button class="edit-btn"
        onclick="event.stopPropagation(); location='/admin/edit/<%= member.id %>'">
        <i class="fas fa-pencil-alt"></i>
      </button>

      <button class="delete-btn"
        onclick="event.stopPropagation(); confirmDelete( '<%= member.id %>' , '<%= member.name %>')">
        DELETE
      </button>

      <div class="family-card-header">
        <strong><i class="fas fa-user-circle"></i> <%= member.name %></strong>
      </div>

      <div class="family-card-body">
        <p><i class="fas fa-map-marker-alt"></i> <%= member.district %>, <%= member.state %></p>
        <p><i class="fas fa-briefcase"></i> <%= member.occupation %></p>
        <span class="children-badge">
          <i class="fas fa-child"></i> <%= member.children_count || 0 %> Children
        </span>
      </div>
    </div>
    <% }) %>
  </div>

  <!-- PAGINATION -->
<% if (totalPages > 1) { %>
<nav class="d-flex justify-content-center mt-3">
  <ul class="pagination pagination-sm align-items-center">

    <!-- Back button -->
    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage - 1 %>">
        &laquo; Back
      </a>
    </li>

    <!-- Page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>">
          <%= i %>
        </a>
      </li>
    <% } %>

    <!-- Next button -->
    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage + 1 %>">
        Next &raquo;
      </a>
    </li>

  </ul>
</nav>
<% } %>

</div>

<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p id="deleteMessage">Sure you want to delete the family?</p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>


<!-- PDF EXPORT MODAL -->
<div class="modal fade" id="pdfExportModal" tabindex="-1" aria-labelledby="pdfExportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pdfExportModalLabel">Export PDF by State & District</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="stateSelect" class="form-label">Select State</label>
          <select class="form-select" id="stateSelect" onchange="loadDistricts()">
            <option value="">Select State</option>
            <% if (states && states.length > 0) { %>
              <% states.forEach(function(state) { %>
                <option value="<%= state %>"><%= state %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        <div class="mb-3">
          <label for="districtSelect" class="form-label">Select District</label>
          <select class="form-select" id="districtSelect" disabled>
            <option value="">Select District</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="downloadPdfBtn" onclick="downloadPdf()" disabled>Download PDF</button>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
let deleteFamilyId = null;

// create modal ONCE (this was the bug)
const deleteModal = new bootstrap.Modal(
  document.getElementById('deleteModal')
);

function confirmDelete(familyId, familyName) {
  deleteFamilyId = familyId;
  document.getElementById('deleteMessage').textContent =
    'Sure you want to delete the Family?';
  deleteModal.show();
}

document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
  if (!deleteFamilyId) return;

  const form = document.createElement('form');
  form.method = 'POST';
  form.action = '/admin/delete/' + deleteFamilyId;

  document.body.appendChild(form);
  form.submit();
});
</script>
</body>
</html>  