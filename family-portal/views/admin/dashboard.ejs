<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - Family Portal</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: #8B4513;
      --secondary-color: #ecbd7bd5;
      --success-color: #16A34A;
      --warning-color: #F59E0B;
      --danger-color: #DC2626;
      --text-secondary: #2d1e1ed8;
      --card-shadow: 0 8px 20px rgba(0,0,0,0.08);
      --card-shadow-hover: 0 14px 30px rgba(0,0,0,0.12);
    }

    body {
      font-family: 'Inter', sans-serif;
      background: url("/images/tem.jpg") no-repeat center center fixed;
      background-size: cover;
      margin: 0;
    }

    .header {
      background: rgba(255, 255, 255, 0.85);
      border-radius: 14px;
      padding: 1rem 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: var(--card-shadow);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px,1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: rgba(255,255,255,0.9);
      padding: 1rem;
      border-radius: 10px;
      text-align: center;
      box-shadow: var(--card-shadow);
    }

    .family-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .family-card {
      background: #fff;
      border-radius: 14px;
      box-shadow: var(--card-shadow);
      overflow: hidden;
      cursor: pointer;
      position: relative;
    }

    .family-card-header {
      background: linear-gradient(135deg, #8B4513, #c9896b);
      padding: 1rem;
      color: #fff;
    }

    .family-card-body {
      padding: 1.25rem;
    }

    .children-badge {
      background: #f8f6f5;
      color: var(--primary-color);
      padding: 0.35rem 0.7rem;
      border-radius: 999px;
      font-size: 0.75rem;
      display: inline-block;
      margin-top: 0.5rem;
    }

    /* Pagination Styles */
    .pagination {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    .pagination .page-link {
      color: var(--primary-color);
      background-color: rgba(255, 255, 255, 0.9);
      border: 2px solid var(--primary-color);
      border-radius: 50px;
      padding: 0.5rem 1rem;
      margin: 0 0.25rem;
      font-weight: 600;
      transition: all 0.1s ease;
      box-shadow: var(--card-shadow);
    }

    .pagination .page-link:hover {
      background-color: var(--primary-color);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--card-shadow-hover);
    }

    .pagination .page-item.active .page-link {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      color: white;
      box-shadow: 0 0 0 0.2rem rgba(139, 69, 19, 0.25);
    }

    .pagination .page-item.disabled .page-link {
      color: #6c757d;
      background-color: #e9ecef;
      border-color: #dee2e6;
    }
  </style>
</head>

<body>
<div class="container-fluid p-4">

  <!-- HEADER -->
  <div class="header">
    <div>
      <h4 class="fw-bold text-primary mb-0">
        <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
      </h4>
      <small class="text-muted">Manage and monitor family registrations</small>
    </div>

    <div class="dropdown">
      <button class="btn btn-outline-primary fs-4" data-bs-toggle="dropdown">â‹®</button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="/admin/export/excel"><i class="fas fa-file-excel"></i> Excel</a></li>
        <li><a class="dropdown-item" href="/admin/export/pdf"><i class="fas fa-file-pdf"></i> PDF</a></li>
      </ul>
    </div>
  </div>

  <!-- ALERT -->
  <% if (locals.updated) { %>
  <div class="alert alert-success alert-dismissible fade show mb-4">
    Family details updated successfully!
    <button class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- STATS -->
  <% if (stats) { %>
  <div class="stats-grid">
    <div class="stat-card">
      <i class="fas fa-users fa-2x text-primary"></i>
      <h4><%= stats.totalFamilies %></h4>
      <small>Families</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-user-friends fa-2x text-success"></i>
      <h4><%= stats.totalMembers %></h4>
      <small>Members</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-child fa-2x text-warning"></i>
      <h4><%= stats.totalChildren %></h4>
      <small>Children</small>
    </div>
    <div class="stat-card">
      <i class="fas fa-calendar-plus fa-2x text-danger"></i>
      <h4><%= stats.recentFamilies %></h4>
      <small>Recent</small>
    </div>
  </div>
  <% } %>

  <!-- SEARCH -->
  <div class="card mb-4">
    <div class="card-body">
      <%- include("search-filter-form") %>
    </div>
  </div>

  <!-- ACTION BUTTONS -->
  <div class="mb-4 d-flex gap-2">
    <a href="/family-form" class="btn btn-primary">Add Family</a>
  </div>

  <!-- FAMILY CARDS -->
  <div class="family-grid">
    <% results.forEach(member => { %>
    <div class="family-card" onclick="location='/admin/view/<%= member.id %>'">
      <div class="family-card-header">
        <strong><i class="fas fa-user-circle"></i> <%= member.name %></strong>
      </div>
      <div class="family-card-body">
        <p><i class="fas fa-map-marker-alt"></i> <%= member.district %>, <%= member.state %></p>
        <p><i class="fas fa-briefcase"></i> <%= member.occupation %></p>
        <span class="children-badge">
          <i class="fas fa-child"></i> <%= member.children_count || 0 %> Children
        </span>
      </div>
    </div>
    <% }) %>
  </div>

  <!-- PAGINATION -->
<% if (totalPages > 1) { %>
<nav class="d-flex justify-content-center mt-4">
  <ul class="pagination pagination-lg align-items-center">

    <!-- Back button -->
    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage - 1 %>">
        &laquo; Back
      </a>
    </li>

    <!-- Page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>">
          <%= i %>
        </a>
      </li>
    <% } %>

    <!-- Next button -->
    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage + 1 %>">
        Next &raquo;
      </a>
    </li>

  </ul>
</nav>
<% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>