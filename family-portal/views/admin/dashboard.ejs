<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">

    <%- include('search-filter-form') %>

    <!-- Cards Grid -->
    <div class="row g-4">
        <% if (results && results.length > 0) { %>
            <% results.forEach(member => { %>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><%= member.name %></h5>
                        <p class="card-text text-muted">
                            <%= member.district %>, <%= member.state %>
                        </p>

                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a href="/admin/view/<%= member.id %>" class="btn btn-sm btn-info text-white">View</a>
                        <a href="/admin/edit/<%= member.id %>" class="btn btn-sm btn-warning">Edit</a>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <%= message || 'No results found.' %>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?q=<%= searchValue %>&state=<%= selectedState %>&district=<%= selectedDistrict %>&page=<%= currentPage - 1 %>">&laquo;</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
            </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?q=<%= searchValue %>&state=<%= selectedState %>&district=<%= selectedDistrict %>&page=<%= i %>"><%= i %></a>
            </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="?q=<%= searchValue %>&state=<%= selectedState %>&district=<%= selectedDistrict %>&page=<%= currentPage + 1 %>">&raquo;</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
            </li>
            <% } %>
        </ul>
    </nav>
    <% } %>

</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
