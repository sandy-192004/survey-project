<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">

    <!-- Search & Filter Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="GET" action="/admin/search">
                <div class="row g-2 align-items-center">

                    <div class="col-md-4">
                        <input type="text" name="q" class="form-control" placeholder="Search family..." value="<%= searchValue %>">
                    </div>

                    <div class="col-md-3">
                        <select name="state" class="form-select">
                            <option value="">State</option>
                            <% stateOptions.forEach(state => { %>
                                <option value="<%= state.state %>" <%= selectedState === state.state ? 'selected' : '' %>><%= state.state %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <select name="district" class="form-select">
                            <option value="">District</option>
                            <% districtOptions.forEach(district => { %>
                                <option value="<%= district.district %>" <%= selectedDistrict === district.district ? 'selected' : '' %>><%= district.district %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <!-- Cards Grid -->
    <div class="row g-4">
        <% if (results && results.length > 0) { %>
            <% results.forEach(member => { %>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><%= member.name %></h5>
                        <p class="card-text text-muted">
                            <%= member.district %>, <%= member.state %>
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a href="/admin/view/<%= member.id %>" class="btn btn-sm btn-info text-white">View</a>
                        <a href="/admin/edit/<%= member.id %>" class="btn btn-sm btn-warning">Edit</a>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <%= message || 'No results found.' %>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#">&laquo;</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">4</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        </ul>
    </nav>

</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
