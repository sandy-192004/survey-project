<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">

<% if (updated) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Family details updated successfully!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<%- include("search-filter-form") %>

<div class="mb-3">
  <a href="/admin/export/excel" class="btn btn-success">Export to Excel</a>
  <a href="/admin/export/pdf" class="btn btn-danger">Export to PDF</a>
</div>

  <p>Debug: Results count: <%= results.length %></p>

  <div class="row g-4">
    <% results.forEach(member => { %>
      <div class="col-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= member.name %></h5>
            <p class="text-muted mb-1"><%= member.district %>, <%= member.state %></p>
            <small><%= member.occupation %></small>
            <p class="text-muted mb-1">Children: <%= member.children_count || 0 %></p>
            <div class="mt-3">
              <a href="/admin/view/<%= member.id %>" class="btn btn-primary btn-sm">View</a>
              <a href="/admin/edit/<%= member.id %>" class="btn btn-secondary btn-sm">Edit</a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (totalPages > 1) { %>
  <nav class="mt-4">
    <ul class="pagination justify-content-center">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link"
             href="?page=<%= i %>&q=<%= searchValue %>&state=<%= selectedState %>&district=<%= selectedDistrict %>">
            <%= i %>
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
  <% } %>

</div>
</body>
</html>
 

