<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Family - Family Portal</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-5" href="/dashboard">
                <i class="bi bi-house-heart"></i> Family Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/dashboard">
                            <i class="bi bi-house-door"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/pooja-booking">
                            <i class="bi bi-calendar-heart"></i> Pooja Booking
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">My Family Details</h1>
                <% if (hasData) { %>
                    <%
                    let members = [];
                    // Add husband
                    members.push({
                        name: parent.name,
                        relation: 'Husband',
                        occupation: parent.occupation,
                        mobile: parent.mobile,
                        email: parent.email,
                        address: `${parent.door_no}, ${parent.street}, ${parent.district}, ${parent.state} - ${parent.pincode}`
                    });
                    // Add wife if exists
                    if (parent.wife_name) {
                        members.push({
                            name: parent.wife_name,
                            relation: 'Wife',
                            occupation: 'N/A',
                            mobile: parent.mobile,
                            email: parent.email,
                            address: `${parent.door_no}, ${parent.street}, ${parent.district}, ${parent.state} - ${parent.pincode}`
                        });
                    }
                    // Add children
                    if (children && children.length > 0) {
                        children.forEach(child => {
                            members.push({
                                name: child.name,
                                relation: 'Child',
                                occupation: child.occupation,
                                dob: child.dob,
                                gender: child.gender
                            });
                        });
                    }
                    %>
                    <div class="row">
                        <% members.forEach(member => { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0"><%= member.relation %></h5>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Name:</strong> <%= member.name %></p>
                                        <% if (member.occupation) { %>
                                            <p><strong>Occupation:</strong> <%= member.occupation %></p>
                                        <% } %>
                                        <% if (member.mobile) { %>
                                            <p><strong>Mobile:</strong> <%= member.mobile %></p>
                                        <% } %>
                                        <% if (member.email) { %>
                                            <p><strong>Email:</strong> <%= member.email %></p>
                                        <% } %>
                                        <% if (member.address) { %>
                                            <p><strong>Address:</strong> <%= member.address %></p>
                                        <% } %>
                                        <% if (member.dob) { %>
                                            <p><strong>Date of Birth:</strong> <%= member.dob %></p>
                                        <% } %>
                                        <% if (member.gender) { %>
                                            <p><strong>Gender:</strong> <%= member.gender %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <div class="text-center">
                        <a href="/family/edit/<%= parent.id %>" class="btn btn-primary">Edit Family Details</a>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <div class="alert alert-warning">
                            <h5>No Family Details Available</h5>
                            <p>You haven't added your family details yet.</p>
                            <a href="/family-form" class="btn btn-primary">Add Family Details</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Family Modal -->
    <div class="modal fade" id="addFamilyModal" tabindex="-1" aria-labelledby="addFamilyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addFamilyModalLabel">Add Family Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>You haven't added your family details yet. Would you like to add them now?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/family-form" class="btn btn-primary">Add Details</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show modal if no data
        document.addEventListener('DOMContentLoaded', function() {
             if (!hasData) { 
                const addFamilyModal = new bootstrap.Modal(document.getElementById('addFamilyModal'));
                addFamilyModal.show();
             } 
        });
    </script>
</body>
</html>
