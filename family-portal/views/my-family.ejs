<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Family - Family Portal</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-5" href="/dashboard">
                <i class="bi bi-house-heart"></i> Family Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/dashboard">
                            <i class="bi bi-house-door"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/pooja-booking">
                            <i class="bi bi-calendar-heart"></i> Pooja Booking
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/profile">
                            <i class="bi bi-person-circle"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-500" href="/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">My Family Details</h1>
                <% if (hasData) { %>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Parent Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Name:</strong> <%= parent.name %></p>
                                    <p><strong>Wife Name:</strong> <%= parent.wife_name || 'N/A' %></p>
                                    <p><strong>Mobile:</strong> <%= parent.mobile %></p>
                                    <p><strong>Email:</strong> <%= parent.email %></p>
                                    <p><strong>Occupation:</strong> <%= parent.occupation %></p>
                                    <p><strong>Address:</strong> <%= parent.door_no %>, <%= parent.street %>, <%= parent.district %>, <%= parent.state %> - <%= parent.pincode %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Children Details</h5>
                                </div>
                                <div class="card-body">
                                    <% if (children && children.length > 0) { %>
                                        <% children.forEach(child => { %>
                                            <div class="mb-3 p-3 border rounded">
                                                <p><strong>Name:</strong> <%= child.name %></p>
                                                <p><strong>Occupation:</strong> <%= child.occupation %></p>
                                                <p><strong>Date of Birth:</strong> <%= child.dob %></p>
                                                <p><strong>Gender:</strong> <%= child.gender %></p>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No children details available.</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="/family/edit/<%= parent.id %>" class="btn btn-primary">Edit Family Details</a>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <div class="alert alert-warning">
                            <h5>No Family Details Available</h5>
                            <p>You haven't added your family details yet.</p>
                            <a href="/family-form" class="btn btn-primary">Add Family Details</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Family Modal -->
    <div class="modal fade" id="addFamilyModal" tabindex="-1" aria-labelledby="addFamilyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addFamilyModalLabel">Add Family Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>You haven't added your family details yet. Would you like to add them now?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/family-form" class="btn btn-primary">Add Details</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show modal if no data
        document.addEventListener('DOMContentLoaded', function() {
            <% if (!hasData) { %>
                const addFamilyModal = new bootstrap.Modal(document.getElementById('addFamilyModal'));
                addFamilyModal.show();
            <% } %>
        });
    </script>
</body>
</html>
