<!DOCTYPE html>
<html>
<head>
  <title>My Family</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .family-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
    }
    .member-card {
      border: none;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
      margin-bottom: 1rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    .member-card:hover {
      transform: translateY(-5px);
    }
    .member-photo {
      height: 200px;
      object-fit: cover;
      border-bottom: 3px solid #667eea;
    }
    .member-info {
      padding: 1rem;
    }
    .member-name {
      font-size: 1.1rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    .member-role {
      background: #667eea;
      color: white;
      padding: 0.25rem 0.6rem;
      border-radius: 20px;
      font-size: 0.75rem;
      display: inline-block;
      margin-bottom: 0.75rem;
    }
    .info-item {
      margin-bottom: 0.4rem;
      display: flex;
      align-items: center;
      font-size: 0.9rem;
    }
    .info-item i {
      width: 18px;
      color: #667eea;
      margin-right: 0.4rem;
      font-size: 0.8rem;
    }
    .parents-section, .children-section {
      margin-bottom: 2rem;
    }
    .section-title {
      color: #333;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #667eea;
      font-size: 1.5rem;
    }
    .no-data {
      text-align: center;
      padding: 2rem 1rem;
      color: #666;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 768px) {
      .family-header {
        padding: 1.5rem 0;
        margin-bottom: 1rem;
      }

      .family-header h1 {
        font-size: 1.8rem;
      }

      .family-header .btn {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
      }

      .member-card {
        margin-bottom: 1.5rem;
        border-radius: 12px;
      }

      .member-photo {
        height: 180px;
      }

      .member-info {
        padding: 0.8rem;
      }

      .member-name {
        font-size: 1rem;
      }

      .section-title {
        font-size: 1.3rem;
        margin-bottom: 1rem;
      }

      .info-item {
        font-size: 0.85rem;
      }

      .btn {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
      }

      /* Stack header content on mobile */
      .family-header .row > div {
        text-align: center !important;
        margin-bottom: 1rem;
      }

      .family-header .row > div:last-child {
        margin-bottom: 0;
      }
    }

    @media (max-width: 576px) {
      .container {
        padding-left: 15px;
        padding-right: 15px;
      }

      .member-photo {
        height: 160px;
      }

      .member-info {
        padding: 0.7rem;
      }

      .section-title {
        font-size: 1.2rem;
      }

      .no-data {
        padding: 1.5rem 0.5rem;
      }

      .no-data h4 {
        font-size: 1.3rem;
      }

      .no-data .btn {
        font-size: 0.9rem;
        padding: 0.6rem 1.2rem;
      }
    }

    /* Touch-friendly buttons */
    @media (hover: none) and (pointer: coarse) {
      .member-card:hover {
        transform: none;
      }

      .btn {
        min-height: 44px;
        min-width: 44px;
      }
    }
  </style>
</head>
<body>

<div class="family-header">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1><i class="fas fa-users me-3"></i>My Family</h1>
        <p class="mb-0">View and manage your family members</p>
      </div>
      <div class="col-md-4 text-end">
        <a href="/add-child" class="btn btn-light btn-lg">
          <i class="fas fa-plus me-2"></i>Add Child
        </a>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%
  const parents = members.filter(m => m.member_type === 'parent');
  const children = members.filter(m => m.member_type === 'child');
  %>

  <!-- Parents Section -->
  <% if (parents.length > 0) { %>
  <div class="parents-section">
    <h3 class="section-title">
      <i class="fas fa-user-friends me-2"></i>Parents
    </h3>
    <div class="row justify-content-center">
      <% parents.forEach(m => { %>
        <div class="col-lg-4 col-md-5 col-sm-6 mb-4">
          <div class="card member-card">
            <% if (m.photo) { %>
              <img src="/uploads/<%= m.photo.startsWith('parents/') ? m.photo : 'parents/' + m.photo %>"
                   class="card-img-top member-photo"
                   alt="<%= m.name %>"
                   onerror="this.src='/uploads/default-avatar.png'">
            <% } else { %>
              <div class="member-photo bg-light d-flex align-items-center justify-content-center">
                <i class="fas fa-user-circle fa-5x text-muted"></i>
              </div>
            <% } %>
            <div class="member-info">
              <h5 class="member-name"><%= m.name %></h5>
              <span class="member-role">
                <i class="fas fa-<%= m.relationship === 'husband' ? 'male' : 'female' %> me-1"></i>
                <%= m.relationship.charAt(0).toUpperCase() + m.relationship.slice(1) %>
              </span>

              <% if (m.occupation) { %>
                <div class="info-item">
                  <i class="fas fa-briefcase"></i>
                  <span><%= m.occupation %></span>
                </div>
              <% } %>

              <% if (m.mobile) { %>
                <div class="info-item">
                  <i class="fas fa-phone"></i>
                  <span><%= m.mobile %></span>
                </div>
              <% } %>

              <% if (m.door_no || m.street) { %>
                <div class="info-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span><%= [m.door_no, m.street, m.district, m.state].filter(Boolean).join(', ') %></span>
                </div>
              <% } %>

              <div class="mt-3">
                <a href="/family/edit/<%= m.id %>" class="btn btn-outline-primary btn-sm me-2">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a href="/family/delete/<%= m.id %>" class="btn btn-outline-danger btn-sm">
                  <i class="fas fa-trash me-1"></i>Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- Children Section -->
  <% if (children.length > 0) { %>
  <div class="children-section">
    <h3 class="section-title">
      <i class="fas fa-child me-2"></i>Children  
    </h3>
    <div class="row">
      <% children.forEach(m => { %>
        <div class="col-12 mb-4">
          <div class="card member-card">
            <% if (m.photo) { %>
              <img src="/uploads/<%= m.photo.startsWith('children/') ? m.photo : 'children/' + m.photo %>"
                   class="card-img-top member-photo"
                   alt="<%= m.name %>"
                   onerror="this.src='/uploads/default-avatar.png'">
            <% } else { %>
              <div class="member-photo bg-light d-flex align-items-center justify-content-center">
                <i class="fas fa-user-circle fa-5x text-muted"></i>
              </div>
            <% } %>
            <div class="member-info">
              <h5 class="member-name"><%= m.name %></h5>
              <span class="member-role">
                <i class="fas fa-<%= m.relationship === 'son' ? 'male' : 'female' %> me-1"></i>
                <%= m.relationship.charAt(0).toUpperCase() + m.relationship.slice(1) %>
              </span>

              <% if (m.dob) { %>
                <div class="info-item">
                  <i class="fas fa-birthday-cake"></i>
                  <span><%= new Date(m.dob).toLocaleDateString() %></span>
                </div>
              <% } %>

              <% if (m.gender) { %>
                <div class="info-item">
                  <i class="fas fa-<%= m.gender === 'male' ? 'mars' : 'venus' %>"></i>
                  <span><%= m.gender.charAt(0).toUpperCase() + m.gender.slice(1) %></span>
                </div>
              <% } %>

              <% if (m.occupation) { %>
                <div class="info-item">
                  <i class="fas fa-briefcase"></i>
                  <span><%= m.occupation %></span>
                </div>
              <% } %>

              <% if (m.mobile) { %>
                <div class="info-item">
                  <i class="fas fa-phone"></i>
                  <span><%= m.mobile %></span>
                </div>
              <% } %>

              <div class="mt-3">
                <a href="/family/edit/<%= m.id %>" class="btn btn-outline-primary btn-sm me-2">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a href="/family/delete/<%= m.id %>" class="btn btn-outline-danger btn-sm">
                  <i class="fas fa-trash me-1"></i>Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- No Data Message -->
  <% if (parents.length === 0 && children.length === 0) { %>
  <div class="no-data">
    <i class="fas fa-users fa-4x text-muted mb-3"></i>
    <h4>No Family Members Found</h4>
    <p>Start building your family tree by adding members.</p>
    <a href="/family-form" class="btn btn-primary btn-lg">
      <i class="fas fa-plus me-2"></i>Add Your First Family Member
    </a>
  </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
