<div class="container">
  <%
  const parents = members.filter(m => m.member_type === 'parent');
  const children = members.filter(m => m.member_type === 'child');
  %>

  <!-- Parents Section -->
  <% if (parents.length > 0) { %>
  <div class="parents-section">
    <h3 class="section-title">
      <i class="fas fa-user-friends me-2"></i>Parents
    </h3>
    <div class="row justify-content-center">
      <% parents.forEach(m => { %>
        <div class="col-lg-4 col-md-5 col-sm-6 mb-4">
          <div class="card member-card">
            <% if (m.photo) { %>
              <img src="/uploads/<%= m.photo.startsWith('parents/') ? m.photo : 'parents/' + m.photo %>"
                   class="card-img-top member-photo"
                   alt="<%= m.name %>"
                   onerror="this.src='/uploads/default-avatar.png'">
            <% } else { %>
              <div class="member-photo bg-light d-flex align-items-center justify-content-center">
                <i class="fas fa-user-circle fa-5x text-muted"></i>
              </div>
            <% } %>
            <div class="member-info">
              <h5 class="member-name"><%= m.name %></h5>
              <span class="member-role">
                <i class="fas fa-<%= m.relationship === 'husband' ? 'male' : 'female' %> me-1"></i>
                <%= m.relationship.charAt(0).toUpperCase() + m.relationship.slice(1) %>
              </span>

              <% if (m.occupation) { %>
                <div class="info-item">
                  <i class="fas fa-briefcase"></i>
                  <span><%= m.occupation %></span>
                </div>
              <% } %>

              <% if (m.mobile) { %>
                <div class="info-item">
                  <i class="fas fa-phone"></i>
                  <span><%= m.mobile %></span>
                </div>
              <% } %>

              <% if (m.door_no || m.street) { %>
                <div class="info-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span><%= [m.door_no, m.street, m.district, m.state].filter(Boolean).join(', ') %></span>
                </div>
              <% } %>

              <div class="mt-3">
                <a href="/family/edit/<%= m.id %>" class="btn btn-outline-primary btn-sm me-2">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a href="/family/delete/<%= m.id %>" class="btn btn-outline-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete this family member? This action cannot be undone.')">
                  <i class="fas fa-trash me-1"></i>Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- Children Section -->
  <% if (children.length > 0) { %>
  <div class="children-section">
    <h3 class="section-title">
      <i class="fas fa-child me-2"></i>Children  
    </h3>
    <div class="row">
      <% children.forEach(m => { %>
        <div class="col-12 mb-4">
          <div class="card member-card">
            <% if (m.photo) { %>
              <img src="/uploads/<%= m.photo.startsWith('children/') ? m.photo : 'children/' + m.photo %>"
                   class="card-img-top member-photo"
                   alt="<%= m.name %>"
                   onerror="this.src='/uploads/default-avatar.png'">
            <% } else { %>
              <div class="member-photo bg-light d-flex align-items-center justify-content-center">
                <i class="fas fa-user-circle fa-5x text-muted"></i>
              </div>
            <% } %>
            <div class="member-info">
              <h5 class="member-name"><%= m.name %></h5>
              <span class="member-role">
                <i class="fas fa-<%= m.relationship === 'son' ? 'male' : 'female' %> me-1"></i>
                <%= m.relationship.charAt(0).toUpperCase() + m.relationship.slice(1) %>
              </span>

              <% if (m.dob) { %>
                <div class="info-item">
                  <i class="fas fa-birthday-cake"></i>
                  <span><%= new Date(m.dob).toLocaleDateString() %></span>
                </div>
              <% } %>

              <% if (m.gender) { %>
                <div class="info-item">
                  <i class="fas fa-<%= m.gender === 'male' ? 'mars' : 'venus' %>"></i>
                  <span><%= m.gender.charAt(0).toUpperCase() + m.gender.slice(1) %></span>
                </div>
              <% } %>

              <% if (m.occupation) { %>
                <div class="info-item">
                  <i class="fas fa-briefcase"></i>
                  <span><%= m.occupation %></span>
                </div>
              <% } %>

              <% if (m.mobile) { %>
                <div class="info-item">
                  <i class="fas fa-phone"></i>
                  <span><%= m.mobile %></span>
                </div>
              <% } %>

              <div class="mt-3">
                <a href="/family/edit/<%= m.id %>" class="btn btn-outline-primary btn-sm me-2">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a href="/family/delete/<%= m.id %>" class="btn btn-outline-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete this family member? This action cannot be undone.')">
                  <i class="fas fa-trash me-1"></i>Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- No Data Message -->
  <% if (parents.length === 0 && children.length === 0) { %>
  <div class="no-data">
    <i class="fas fa-users fa-4x text-muted mb-3"></i>
    <h4>No Family Members Found</h4>
    <p>Start building your family tree by adding members.</p>
    <a href="/family-form" class="btn btn-primary btn-lg">
      <i class="fas fa-plus me-2"></i>Add Your First Family Member
    </a>
  </div>
  <% } %>
</div>

    <!-- ================= CHILDREN ================= -->
    <h4 class="section-title">Children</h4>
    <div class="children-row">

      <% members.forEach(member => { %>
        <% if (member.member_type === 'child') { %>

          <div class="member-card">
            <i class="fas fa-edit edit-icon" onclick="window.location.href='/member-edit/<%= member.id %>'"></i>

            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship || '-' %></div>
              <div class="info-item"><b>DOB:</b>
                <%= member.dob
                    ? new Date(member.dob).toISOString().split('T')[0]
                    : '-'
                %>
              </div>
              <div class="info-item"><b>Gender:</b>
                <%
                  let gender = member.gender;
                  if (!gender || gender === '-') {
                    if (member.relationship === 'husband') gender = 'Male';
                    else if (member.relationship === 'wife') gender = 'Female';
                    else gender = '-';
                  }
                %>
                <%= gender %>
              </div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= member.door_no || '-' %></div>
            </div>

            <% if (member.photo && member.photo.trim() !== "") { %>
              <% let photoSrc = member.photo; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x120?text=No+Photo" class="member-photo">
            <% } %>
          </div>

        <% } %>
      <% }) %>

    </div>

    <div class="add-child-bar" data-bs-toggle="modal" data-bs-target="#addChildModal">
      + Add Child
    </div>

  </div>

  <!-- ADD CHILD MODAL -->
  <div class="modal fade" id="addChildModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header" style="background:#A0522D;color:white;">
          <h5 class="modal-title">Add Child</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <form id="addChildForm" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="row">
              <div class="col-md-6">
                <input class="form-control mb-2" name="name" placeholder="Child Name" required>
              </div>
              <div class="col-md-6">
                <input type="date" class="form-control mb-2" name="dob">
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <select class="form-control mb-2" name="gender">
                  <option value="">Select Gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <div class="col-md-6">
                <input class="form-control mb-2" name="occupation" placeholder="Occupation">
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <select class="form-control mb-2" name="relationship">
                  <option value="">Relationship</option>
                  <option value="son">Son</option>
                  <option value="daughter">Daughter</option>
                </select>
              </div>
              <div class="col-md-6">
                <input type="file" class="form-control mb-2" name="photo" accept="image/*">
              </div>
            </div>

            <!-- Address Section -->
            <h6 class="mt-3 mb-2">Address</h6>
            <div class="row">
              <div class="col-md-6">
                <input class="form-control mb-2" name="door_no" placeholder="Door No">
              </div>
              <div class="col-md-6">
                <input class="form-control mb-2" name="street" placeholder="Street">
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <input class="form-control mb-2" name="pincode" placeholder="Pincode" pattern="[0-9]{6}" title="Enter 6-digit pincode">
              </div>
              <div class="col-md-4">
                <select class="form-control mb-2" name="state" id="childState">
                  <option value="">Select State</option>
                </select>
              </div>
              <div class="col-md-4">
                <select class="form-control mb-2" name="district" id="childDistrict">
                  <option value="">Select District</option>
                </select>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/family.js"></script>


</body>
