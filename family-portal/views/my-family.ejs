<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Family</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

  <style>
    /* ===== GLOBAL ===== */
    body {
      margin: 0;
      background-color: #f5e6d3;
      
    }

    /* ===== FULL WIDTH HEADER ===== */
    .family-header {
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      background: linear-gradient(135deg, #8B4513, #A0522D);
      color: white;
      padding: 1.5rem 1rem;
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
    }

    /* ===== SECTION ===== */
    .section-title {
      margin: 25px 0 10px;
      font-weight: bold;
      color: #5a3e2b;
    }

    /* ===== ROWS ===== */
    .parents-row,
    .children-row {
      display: flex;
      gap: 20px;
      flex-wrap: nowrap;
      overflow-x: auto;
      padding-bottom: 10px;
    }

    /* ===== CARD ===== */
    .member-card {
      min-width: 420px;
      max-width: 720px;
      background-color: #f9f1e6;
      border-radius: 14px;
      padding: 100px;
      position: relative;
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
      display: flex;
      justify-content: space-evenly;
      align-items: flex-start;
    }

    /* ===== LEFT DETAILS ===== */
    .member-info {
      flex: 1;
      padding-right: 19px;
    }

    .member-name {
      font-size: 2rem;
      font-weight: bold;
      color: #5a3e2b;
      margin-bottom: 3px;
    }

    .info-item {
      font-size: 1rem;
      color: #4b3621;
      margin-bottom: 4px;
    }

    /* ===== PHOTO ===== */
    .member-photo {
      width: 120px;
      height: 140px;
      object-fit: cover;
      border-radius: 10px;
      border: 2px solid #d1b89a;
    }

    /* ===== EDIT ICON ===== */
    .edit-icon {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #8B4513;
      color: white;
      padding: 6px;
      border-radius: 50%;
      font-size: 13px;
      cursor: pointer;
    }

    /* ===== ADD CHILD BAR ===== */
    .add-child-bar {
      margin: 20px 0;
      background-color: #8B4513;
      color: white;
      text-align: center;
      padding: 10px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
      .parents-row,
      .children-row {
        flex-wrap: wrap;
      }

      .member-card {
        min-width: 100%;
      }
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="family-header">
    My Family
  </div>

  <div class="container mt-4">

    <% members = members || []; %>

    <% if (!members.length) { %>
      <div class="text-center mt-4 text-muted">
        <h4>No family data found</h4>
        <a href="/family-form" class="btn btn-primary mt-2">Add Family</a>
      </div>
    <% } %>

    <!-- ================= PARENTS ================= -->
    <h4 class="section-title">Parents</h4>
    <div class="parents-row">

      <% members.forEach(member => { %>
        <% if (member.member_type === 'parent') { %>

          <div class="member-card">
            <i class="fas fa-edit edit-icon" onclick="window.location.href='/family-edit'"></i>

            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship %></div>
              <div class="info-item"><b>Mobile:</b> <%= member.mobile || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= [member.door_no, member.street, member.district, member.state, member.pincode].filter(Boolean).join(', ') || '-' %></div>
            </div>

            <% if (member.photo && member.photo.trim() !== "") { %>
              <% let photoSrc = member.photo; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x140?text=No+Photo" class="member-photo">
            <% } %>
          </div>

        <% } %>
      <% }) %>

    </div>

    <!-- ================= CHILDREN ================= -->
    <h4 class="section-title">Children</h4>
    <div class="children-row">

      <% members.forEach(member => { %>
        <% if (member.member_type === 'child') { %>

          <div class="member-card">
            <i class="fas fa-edit edit-icon" onclick="window.location.href='/member-edit/<%= member.id %>'"></i>

            <div class="member-info">
              <div class="member-name"><%= member.name %></div>
              <div class="info-item"><b>Relationship:</b> <%= member.relationship || '-' %></div>
              <div class="info-item"><b>DOB:</b> <%= member.dob || '-' %></div>
              <div class="info-item"><b>Gender:</b> <%= member.gender || '-' %></div>
              <div class="info-item"><b>Occupation:</b> <%= member.occupation || '-' %></div>
              <div class="info-item"><b>Address:</b> <%= member.door_no || '-' %></div>
            </div>

            <% if (member.photo && member.photo.trim() !== "") { %>
              <% let photoSrc = member.photo; %>
              <% if (photoSrc.startsWith('/')) photoSrc = photoSrc.substring(1); %>
              <% if (photoSrc.startsWith('uploads/')) { %>
                <img src="/<%= photoSrc %>" class="member-photo">
              <% } else { %>
                <img src="/uploads/<%= photoSrc %>" class="member-photo">
              <% } %>
            <% } else { %>
              <img src="https://via.placeholder.com/120x140?text=No+Photo" class="member-photo">
            <% } %>
          </div>

        <% } %>
      <% }) %>

    </div>

    <div class="add-child-bar" data-bs-toggle="modal" data-bs-target="#addChildModal">
      + Add Child
    </div>

  </div>

  <!-- ADD CHILD MODAL (UI ONLY) -->
  <div class="modal fade" id="addChildModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header" style="background:#A0522D;color:white;">
          <h5 class="modal-title">Add Child</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input class="form-control mb-2" placeholder="Child Name">
          <input type="date" class="form-control mb-2">
          <select class="form-control mb-2">
            <option>Select Gender</option>
            <option>Male</option>
            <option>Female</option>
          </select>
          <input class="form-control mb-2" placeholder="Occupation">
          <select class="form-control mb-2">
            <option>Relationship</option>
            <option>Son</option>
            <option>Daughter</option>
          </select>
          <input type="file" class="form-control">
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-primary">Save</button>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
