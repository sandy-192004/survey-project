<!DOCTYPE html>
<html>
<head>
  <title>My Family</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .family-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
    }
    .member-card {
      border: none;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
      margin-bottom: 1rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    .member-card:hover {
      transform: translateY(-5px);
    }
    .member-photo {
      height: 200px;
      object-fit: cover;
      border-bottom: 3px solid #667eea;
    }
    .member-info {
      padding: 1rem;
    }
    .member-name {
      font-size: 1.1rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    .member-role {
      background: #667eea;
      color: white;
      padding: 0.25rem 0.6rem;
      border-radius: 20px;
      font-size: 0.75rem;
      display: inline-block;
      margin-bottom: 0.75rem;
    }
    .info-item {
      margin-bottom: 0.4rem;
      display: flex;
      align-items: center;
      font-size: 0.9rem;
    }
    .info-item i {
      width: 18px;
      color: #667eea;
      margin-right: 0.4rem;
      font-size: 0.8rem;
    }
    .parents-section, .children-section {
      margin-bottom: 2rem;
    }
    .section-title {
      color: #333;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #667eea;
      font-size: 1.5rem;
    }
    .no-data {
      text-align: center;
      padding: 2rem 1rem;
      color: #666;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 768px) {
      .family-header {
        padding: 1.5rem 0;
        margin-bottom: 1rem;
      }

      .family-header h1 {
        font-size: 1.8rem;
      }

      .family-header .btn {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
      }

      .member-card {
        margin-bottom: 1.5rem;
        border-radius: 12px;
      }

      .member-photo {
        height: 180px;
      }

      .member-info {
        padding: 0.8rem;
      }

      .member-name {
        font-size: 1rem;
      }

      .section-title {
        font-size: 1.3rem;
        margin-bottom: 1rem;
      }

      .info-item {
        font-size: 0.85rem;
      }

      .btn {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
      }

      /* Stack header content on mobile */
      .family-header .row > div {
        text-align: center !important;
        margin-bottom: 1rem;
      }

      .family-header .row > div:last-child {
        margin-bottom: 0;
      }
    }

    @media (max-width: 576px) {
      .container {
        padding-left: 15px;
        padding-right: 15px;
      }

      .member-photo {
        height: 160px;
      }

      .member-info {
        padding: 0.7rem;
      }

      .section-title {
        font-size: 1.2rem;
      }

      .no-data {
        padding: 1.5rem 0.5rem;
      }

      .no-data h4 {
        font-size: 1.3rem;
      }

      .no-data .btn {
        font-size: 0.9rem;
        padding: 0.6rem 1.2rem;
      }
    }

    /* Touch-friendly buttons */
    @media (hover: none) and (pointer: coarse) {
      .member-card:hover {
        transform: none;
      }

      .btn {
        min-height: 44px;
        min-width: 44px;
      }
    }
  </style>
</head>
<body class="bg-light">

<div class="container mt-4">
  <h3 class="mb-4">My Family</h3>

  <div class="row">
    <% members.forEach(m => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <img src="/<%= m.photo %>" class="card-img-top" style="height:200px;object-fit:cover">
          <div class="card-body">
            <h5 class="card-title"><%= m.name %></h5>
            <p class="card-text">
              <strong>Role:</strong> <%= m.relationship %><br>
              <strong>Occupation:</strong> <%= m.occupation || '-' %><br>
              <strong>Mobile:</strong> <%= m.mobile || '-' %>
            </p>

            <a href="/family/edit/<%= m.id %>" class="btn btn-primary btn-sm">
              Edit
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>
